<% provide(:title, "Admin") %>
<p>
<div class="row">
	<div class="col-xs-12">
		<table class="table table-striped table-bordered table-hover">
		    <thead>
		    	<th>Site</th>
		    	<th>Sport</th>
		    	<th>Updated</th>
		    	<th>Admin User</th>
		    </thead>
		    <tbody>
		    	<% @sports.each do |s| %>
			    	<tr>
			    		<td><%= link_to s.sitename, sport_path(s) %></td>
			    		<td><%= link_to s.name, sport_path(s) %></td>
			    		<td><%= s.updated_at.strftime("%m/%d/%Y") %></td>
			    		<td><%= link_to User.find(s.adminid).email, user_path(s.adminid) %></td>
			    	</tr>
			    <% end %>
				<%= will_paginate @sports %>
		    </tbody>
		</table>
	</div>
</div>
