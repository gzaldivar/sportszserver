<% provide(:title, "Confirm Ad Order") %>
<p>
<div class="row">
	<div class="col-xs-11">
		<h2>Confirm your ad order for <%= current_site.sitename %> - <%= @sportadinv.adlevelname %></h2>

		<%= form_for [@sport, @sponsor, @order] do |f| %>
			<%= f.hidden_field :sportadinv_id, value: @sportadinv.id.to_s %>
			<%= f.hidden_field :express_token, value: @order.express_token %>

			<table class="table table-bordered">
				<thead>
					<th>Name</th>
					<th>Email</th>
					<th>Order</th>
					<th>Price</th>
				</thead>
				<tbody>
					<tr>
						<td><%=h @order.first_name %> <%=h @order.last_name %></td>
						<td><%=h current_user.email %></td>
						<td><%=h @sportadinv.adlevelname %></td>
						<td>$<%= @price %></td>
					</tr>
				</tbody>
			</table>
			
			<div class="row">
				<div class="col-xs-1 col-xs-offset-5">
					<%= f.submit "Confirm", class: "btn btn-md btn-primary" %>
				</div>
			</div>
		<% end %>

	</div>
</div>
