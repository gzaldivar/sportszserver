<% if !teamalerts.nil? and !teamalerts.empty? %>
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <th>Score</th>
            <th>Clear</th>
        </thead>
        <tbody>
            <% teamalerts.each do |t| %>
                <tr>
                    <% if t.gamelog_id %>
                        <td><%= link_to t.message, sport_team_gameschedule_path(sport_id: @sport.id, team_id: t.getGame.team_id, id: t.getGame) %></td>
                        <td><%= link_to("Clear", clearteamuser_sport_athlete_alerts_path(sport_id: @sport.id, athlete_id: t.athlete_id, alert_id: t.id, 
                                        user_id: current_user.id), class: "btn btn-xs btn-warning", data: { confirm: "You sure?" }) %></td>
                    <% else %>
                        <td><%= t.message %></td>
                        <td><%= link_to "Clear", deletealert_sport_path(@sport, alert_id: t.id), class: "btn btn-xs btn-warning", data: { confirm: "You sure?" } %></td>
                    <% end %>
                </tr>
            <% end %>
        </tbody>
    </table>
<% end %>
