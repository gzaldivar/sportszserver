<% if @sport.has_stats? %>
	<% if @sport.sportname == "Football" %>
		<div class="span2">
			<div class="input string required"><label class="string required" for="athlete_offpos"><abbr title="required">*</abbr>Offense Position:</label>					
			</div>
			<% if @position.any? and !@position[0].nil? %>
				<%= select_tag "offpos", options_for_select(offense_football_positions, @position[0]), include_blank: true %>
			<% else %>
				<%= select_tag "offpos", options_for_select(offense_football_positions), include_blank: true %>
			<% end %>
			<!--%= f.input :offpos, collection: offense_football_positions, include_blank: true, label: "Offense Position:" %-->
		</div>
		<div class="span2 offset1">
			<div class="input string required"><label class="string required" for="athlete_defpos"><abbr title="required">*</abbr>Defense Position:</label>					
			</div>
			<% if @position.any? and !@position[1].nil? %>
				<%= select_tag "defpos", options_for_select(defense_football_positions, @position[1]), include_blank: true %>
			<% else %>
				<%= select_tag "defpos", options_for_select(defense_football_positions), include_blank: true %>
			<% end %>
			<!--%= f.input :defpos, collection: defense_football_positions, include_blank: true, label: "Defense Position:" %-->
		</div>
		<div class="span2 offset1">
			<div class="input string required"><label class="string required" for="athlete_special_teamspos">Special Teams Position:</label>					
			</div>			
			<% if @position.any? and !@position[2].nil? %>
				<%= select_tag "special_teamspos", options_for_select(specialteams_football_positions, @position[2]), include_blank: true %>
			<% else %>
				<%= select_tag "special_teamspos", options_for_select(specialteams_football_positions), include_blank: true %>
			<% end %>
			<!--%= f.input :special_teamspos, collection: specialteams_football_positions, label: "Special Teams Position:" %-->
		</div>
	<% elsif @sport.sportname == "Basketball" %>
		<div class="span2">
			<%= f.input :position, collection: basketball_positions, include_blank: true %>
		</div>
	<% end %>
<% else %>
	<div class="span3 offset1">
		<%= f.input :position %>
	</div>
<% end %>
