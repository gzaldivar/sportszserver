<% provide(:title, current_site.sitename + " " + @sport.name + ' - ' + @athlete.full_name) %>
<p>
<div class="row">   
  <div class="span10">
		<%= render 'shared/error_messages', object:	@athlete %>
	</div>
</div>
<% if signed_in? %>
  <div class="row">
    <h4>
      <div class="span5">
        <% if @athlete.followers.has_key?(current_user.id.to_s) %>
          You are following this player:&nbsp
          <%= link_to "Stop Following", unfollow_sport_athlete_path(@sport, @athlete),  class: "btn btn-medium btn-info" %><p>
        <% else %>
          Follow this player?&nbsp
          <%= link_to "Follow", follow_sport_athlete_path(@sport, @athlete),  class: "btn btn-medium btn-info" %><p>
        <% end %>
      </div>
      <p>
      <div class="span4 offset1">
        <% if !@athlete.alerts.nil? and !@athlete.alerts.blank? %>
          <%= link_to "Alerts", sport_athlete_alerts_path(@sport, @athlete), class: "btn btn-medium btn-inverse" %>
        <% end %>
      </div>
    </h4>
  </div>
<% end %>
<div class="row">
	<div class="span4">
	<% if !@athlete.pic.blank? %> 
		<%= image_tag @athlete.pic.url(:medium) %>
	<% else %>
		<%= image_tag 'Photo_Not_Available.jpg' %>
	<% end %>
	</div>
  <div class="span6">
    <div class="row">
      <table class="table">
      	<thead> 
          <tr>
      			<th>Number</th>
      			<th>Last Name</th>
      			<th>First Name</th>
      			<th>Middle Name</th>
      			<th>Position</th>
          </tr>
        </thead>
        <tbody>
      		<tr>
      			<td><%= @athlete.number %></td>
      			<td><%= link_to @athlete.lastname, [@sport, @athlete] %></td>
      			<td><%= link_to @athlete.firstname, [@sport, @athlete] %></td>
      			<td><%= @athlete.middlename %></td>
      			<td><%= @athlete.position %></td>
          </tr>
        </tbody>
      </table>
      <table class="table">
        <thead>
          <tr>
      			<th>Height</th>
      			<th>Weight</th>
      			<th>Year</th>
      			<th>Roster</th>
            <th>Photos</th>
            <th>Videos</th>              
      		</tr>
      	</thead>
      	<tbody>
          <tr>
      			<td><%= @athlete.height %></td>
      			<td><%= @athlete.weight %></td>
        			<td><%= @athlete.year %></td>
    				<% if @team.nil? %>
    					<td>Unassinged</td>
    				<% else %>
        				<td><%= @team.team_name %></td>
    				<% end %>
            <td>
              <% if Photo.where(players: @athlete.id.to_s).any? %>
              	<%= link_to "Photos", sport_photos_path(@sport, athlete: { id: @athlete.id } ), class: "btn btn-mini btn-primary" %>              
              <% end %>
            </td>
            <td>
              <% if Videoclip.where(players: @athlete.id.to_s).any? %>
                <%= link_to "Videos", sport_videoclips_path(@sport, athlete: { id: @athlete.id } ), class: "btn btn-mini btn-primary" %>              
              <% end %>
            </td>
      		</tr>
      	</tbody>
      </table>
  	</div>
  </div>
  <p>
  <div class="row">
    <div class="span4 offset2">
      <% if @sport.has_stats? %>
        <% if @sport.name == "Football" %>
         <%= link_to "Stats", passing_sport_athlete_football_stats_path(@sport, @athlete), class:  "btn btn-medium btn-primary" %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
<p>
<div class="row">
	<div class="span4 offset1">
		<h3>Athletes Bio:</h3><p>
		<%= @athlete.bio %>
	</div>
</div>
<p>
<div class="row">
  <div class="span7 offset3">
    <% if user_signed_in? and user_pics_ok? %>
		  <%= link_to	"Add Photo", newathlete_sport_photo_path(@sport, @athlete), class:	"btn btn-medium btn-primary" %>&nbsp;  
    <% end %>
    <% if user_signed_in? and user_videos_ok? %>
		  <%= link_to	"Add Video", newathlete_sport_videoclip_path(@sport, @athlete), class:	"btn btn-medium btn-primary" %>&nbsp;  
    <% end %>
    <% if isAdmin? or isTeamManager?(@athlete) %>
      	<%= link_to "Edit", edit_sport_athlete_path(@sport, @athlete),  class: "btn btn-medium btn-warning" %>&nbsp;
        <%= link_to "Add News", new_sport_newsfeed_path(@sport),  class: "btn btn-medium btn-info" %>&nbsp;
    <% end %>
    <% if isAdmin? %>
			 <%= link_to "Delete", sport_athlete_path(@sport, @athlete),  method:	:delete,  class: "btn btn-medium btn-danger", data: { confirm: "You sure?" } %>&nbsp;
		<% end %>
  </div>
</div>
<div class="row">
  <%= render "layouts/sponsor" %>
</div>
