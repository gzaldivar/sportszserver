<div class-"row">
  <div class="col-xs-8">
    <div id="basketballstats-responsive" class="modal fade" tabindex="-1" data-width="760" style="display: none;">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h4 class="modal-title">Basketball Stats</h4>
      </div>
      <div class="modal-body">
        <div class="well">
          <div class="row">
            <div class="col-xs-2">
              <%= link_to image_tag(player.pic.url(:thumb)), sport_athlete_path(@sport, player) %>
            </div>
            <div class="col-xs-6">
              <h4>Update Basketball Stats for <%= link_to(player.full_name, sport_athlete_path(@sport, player)) %></h4>
            </div>
          </div>
          <p>
          <div class="row">
            <div class="col-xs-8">
              <div class="row">
                <div class="col-xs-2">
                    <button href="#livebasketballstats-responsive" data-dismiss="modal"
                            data-toggle="modal" class="btn btn-md btn-primary">Live Stats</button>
                </div>
                <div class="col-xs-2">
                    <a href="#totalbasketball-responsive" data-dismiss="modal" 
                            data-toggle="modal" class="btn btn-md btn-primary">Stat Totals</a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <div class="col-xs-1">
          <button type="button" data-dismiss="modal" class="btn btn-default">Cancel</button>
        </div>
      </div>
    </div>
  </div>
</div>
<div class-"row">
  <div class="col-xs-8">
    <div id="livebasketballstats-responsive" class="modal fade" tabindex="-1" data-width="760" style="display: none;">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h4 class="modal-title">Live Stats</h4>
      </div>
      <div class="modal-body">
        <div class="well">
          <div class="row">
            <div class="col-xs-2">
              <%= link_to image_tag(player.pic.url(:thumb)), sport_athlete_path(@sport, player) %>
            </div>
            <div class="col-xs-6">
              <h4>Update Live Basketball Scoring Stat for <%= link_to(player.full_name, sport_athlete_path(@sport, player)) %></h4>
            </div>
          </div>
          <p>
          <div class="row">
            <div class="col-xs-11">
              <%= form_for [@sport, player, stat], :input_html => { :class => 'form-horizontal' } do |f| %>
                <%= hidden_field_tag "livestats", value="Live" %>
                <%= hidden_field_tag "gameschedule_id", value=@gameschedule.id %>
                <div class="row">
                  <%= hidden_field_tag "livestats", value="Live" %>
                  <%= hidden_field_tag "gameschedule_id", value=@gameschedule.id.to_s %>
                  <div class="col-xs-2 col-xs-offset-1">
                    <%= label_tag "FGA", "FGA" %>
                    <%= check_box_tag "twoattempt", 1 %>
                  </div>
                  <div class="col-xs-2">
                    <%= label_tag "FGM", "FGM" %>
                    <%= check_box_tag "twomade", 1 %>
                  </div>
                  <div class="col-xs-2">
                    <%= label_tag "3FGA", "3FGA" %>
                    <%= check_box_tag "threeattempt", 1 %>
                  </div>
                  <div class="col-xs-2">
                    <%= label_tag "3FGM", "3FGM" %>
                    <%= check_box_tag "threemade", 1 %>
                  </div>
                </div>
                <p>
                <div class="row">
                  <div class="col-xs-2 col-xs-offset-1">
                    <%= label_tag "FTA", "FTA" %>
                    <%= check_box_tag "ftattempt", 1 %>
                  </div>
                  <div class="col-xs-2">
                    <%= label_tag "FTM", "FTM" %>
                    <%= check_box_tag "ftmade", 1 %>
                  </div>
                  <div class="col-xs-2">
                    <%= label_tag "Foul" %>
                    <%= check_box_tag "fouls", 1 %>
                  </div>
                  <div class="col-xs-2">
                    <%= label_tag "Assists" %>
                    <%= check_box_tag "assists", 1 %>
                  </div>
                </div>
                <p>
                <div class="row">
                  <div class="col-xs-2 col-xs-offset-1">
                    <%= label_tag "Steals" %>
                    <%= check_box_tag "steals", 1 %>
                  </div>
                  <div class="col-xs-2">
                    <%= label_tag "Blocks" %>
                    <%= check_box_tag "blocks", 1 %>
                  </div>
                  <div class="col-xs-2">
                    <%= label_tag "Off Rebound" %>
                    <%= check_box_tag "offrebound", 1 %>
                  </div>
                  <div class="col-xs-2">
                    <%= label_tag "Def Rebound" %>
                    <%= check_box_tag "defrebound", 1 %>
                  </div>
                </div>
                <p>
                <div class="row">
                  <div class="col-xs-2 col-xs-offset-1">
                    <%= label_tag "Turnover" %>
                    <%= check_box_tag "turnover", 1 %>
                  </div>
                </div>
                <p>
                <div class="row">
                  <div class="col-xs-2 col-xs-offset-2">
                    <%= submit_tag 'Submit', class: "btn btn-md btn-primary" %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <div class="col-xs-1">
          <button type="button" data-dismiss="modal" class="btn btn-default">Cancel</button>
        </div>
      </div>
    </div>
  </div>
</div>
<div class-"row">
  <div class="col-xs-8">
    <div id="totalbasketball-responsive" class="modal fade" tabindex="-1" data-width="760" style="display: none;">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
