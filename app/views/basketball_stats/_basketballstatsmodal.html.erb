                    </div>
                    <div class="col-xs-1">
                      <%= f.label :FTM, "FTM" %>
                      <%= f.text_field :ftmade, class: 'form-control' %>
                    </div>
                    <div class="col-xs-1">
                      <%= f.label :fouls %>
                      <%= f.text_field :fouls, class: 'form-control' %>
                    </div>
                    <div class="col-xs-1">
                      <%= f.label :assists %>
                      <%= f.text_field :assists, class: 'form-control' %>
                    </div>
                  </div>
                  <p>
                  <div class="row">
                    <div class="col-xs-1">
                      <%= f.label :steals %>
                      <%= f.text_field :steals, class: 'form-control' %>
                    </div>
                    <div class="col-xs-1">
                      <%= f.label :blocks %>
                      <%= f.text_field :blocks, class: 'form-control' %>
                    </div>
                    <div class="col-xs-1">
                      <%= f.label :offensive_rebound, "ORB" %>
                      <%= f.text_field :offrebound, class: 'form-control' %>
                    </div>
                    <div class="col-xs-1">
                      <%= f.label :defensive_rebound, "DRB" %>
                      <%= f.text_field :defrebound, class: 'form-control' %>
                    </div>
                  </div>
                  <p>
                  <div class="row">
                    <div class="col-xs-1">
                      <%= f.label :turnovers %>
                      <%= f.text_field :turnovers, class: 'form-control' %>
                    </div>
                  </div>
                  <p>
                  <div class="row">
                    <div class="col-xs-1 col-xs-offset-2">
                      <%= f.submit "Submit", class:  "btn btn-md btn-primary" %>
                    </div>
                  </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <div class="col-xs-1">
          <button type="button" data-dismiss="modal" class="btn btn-default">Cancel</button>
        </div>
      </div>
    </div>
  </div>
</div>
