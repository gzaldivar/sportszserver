<% provide(:title, current_site.sitename + " " + @athlete.name + " - Basketball Stats") %>
<p>
<script>
  	$(document).ready(function() {
	    $(window).load(function() {
		   $('#basketballstats-responsive').modal('show')
		});
	});	
</script>
<p>
<div class="row">
	<div class="col-xs-11">
		<div class="row">
			<div class="col-xs-8">
				<h4>Stats for <%= link_to(@athlete.logname, [@sport, @athlete]) %> 
					for game <%= link_to(@gameschedule.game_name, [@sport, current_team, @gameschedule]) %></h4>
			</div>
			<div class="col-xs-1 col-xs-offset-2">
		        <button href="#basketballstats-responsive" data-dismiss="modal" data-toggle="modal" class="btn btn-md btn-primary">Update</button>
			</div>
		</div>
    	<table class="table table-striped table-bordered table-hover">
			<%= render "stat_header_score", name: "Game" %>
			<%= render "stat_body_score", stat: @bbstats, name: "Game" %>
		</table>
    	<table class="table table-striped table-bordered table-hover">
			<%= render "stat_header_other", name: "Game" %>
			<%= render "stat_body_other", stat: @bbstats, name: "Game" %>
		</table>
	</div>
</div>
<%= render 'basketballstatsmodal', player: @athlete, stat: @bbstats %>
