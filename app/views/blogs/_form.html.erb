<script>
  $(document).ready(function() {
    $('#select_team').change(function() {
      $.ajax({
        url: "<%= updateforteams_sport_blogs_path %>",
        data: {
          teamid : $('#select_team').val()
        },
        dataType: "script"
      });
    });
  });
  $(document).ready(function() {
    $('#select_game').change(function() {
      $.ajax({
        url: "<%= updategamelogs_sport_photos_path %>",
        data: {
          gameid : $('#select_game').val()
        },
        dataType: "script"
      });
    });
  });
</script>
<div class="row">
	<div class="col-xs-11">
		<%= simple_form_for [@sport, @blog], 
              :defaults => { :input_html => { :class => "form-control" } } do |f| %>
			<%= render 'shared/error_messages', object: f.object %>
      <%= f.input :user_id, as: :hidden, :input_html => { value: current_user.id } %>
      <%= f.input :team_id, as: :hidden, :input_html => { value: @team.id } %>
          <div class="row">
		        <div class="col-xs-6">
              <% if @oldblog.nil? %>
		            <%= f.input :title, hint: "Enter Blog Title" %>
              <% else %>
                <%= f.input :title, hint: "Enter Blog Title", value: "RE: " + @oldblog.title %>
              <% end %>
		        </div>
	        	<div class="col-xs-4 col-xs-offset-1">
	          		<%= f.input :external_url,  label: "External URL:", required: false, hint: "Enter Url of external site if blog item points to another site" %>
	        	</div>
    		  </div>
  		    <div class="row">
    				  <div class="col-xs-6">
    					   <%= f.input	:entry, as: :text, hint:	"Enter Blog Entry:" %>
    				  </div>
              <p>
  				    <div class="col-xs-4 col-xs-offset-1">
                <div class="row">
                    <h5>Blog for team: <%= @team.team_name %></h5>
                </div>
                <div class="row">
                    <%= f.input	:gameschedule_id, collection: @gameschedules.collect{ |t| [t.game_name, t.id] }, label: "Game", 
                                hint: "Blog for Game .....", input_html: { id: "select_game"} %>
                </div>
                <% if @sport.name == "Football" %>
                  <div class="row">
                      <%= f.input :gamelog_id, collection: @gamelogs.collect{ |t| [t.logentrytext, t.id] }, label: "Play", 
                                  hint: "Blog for Play .....", input_html: { id: "gamelogs_select"} %>
                  </div>
                <% end %>
             		<div class="row">
                    <%= f.input :athlete_id, collection: @athletes.collect{ |t| [t.full_name, t.id] }, label: "Athlete", hint: "Blog for Athlete ...",
                                    input_html: { id: "athletes_select"} %>
            		</div>
            		<div class="row">
                    <%= f.input :coach_id, collection: @coaches.collect{ |t| [t.full_name, t.id] }, label: "Coach", hint: "Blog for Coach ...",
                                      input_html: { id: "coaches_select"} %>
            		</div>
	               <p>
	            </div>
	            <p>
			     </div>
  		</div>
      <div class="row">
  			<div class="col-xs-1 col-xs-offset-5">
  				<%= f.button :submit, "Submit", class: "btn btn-sm btn-primary" %>
  			</div>
      </div>
		<% end %>	
	</div>	
</div>