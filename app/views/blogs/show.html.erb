<% provide(:title, @sport.sport_name + " - Blog") %>
<p>
	<% item=[]
	  if !@blog.kind_of?(Array) 
	    item[0] = @blog  
	  else
	    item = @blog 
	  end %>
<div class ="row">
	<div class="col-xs-10 col-xs-offset-1">
  		<%= render 'blog', blog: item %>
	</div>
</div>
<div class="row">
	<%= render "layouts/sponsor" %>
</div>
<div class="row">
	<div class="col-xs-6 col-xs-offset-2">
		<h5><em><strong><%= link_to "Back to Blog for " + @sport.sitename + " " + @sport.sport_name, sport_blogs_path(@sport, team_id: item[0].team_id) %></strong></em></h5>
	</div>
</div>
