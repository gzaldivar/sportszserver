<div class="row">
	<div class="span12 offset1">
		<%= simple_form_for [@sport, @coach] do |f| %>
			<%= render 'shared/error_messages', object: f.object %>
			<div class="row">
				<div class="span2">
					<%= f.input	:lastname,	label:	"Last name" %>
				</div>
				<div class="span2 offset1">
					<%= f.input :firstname,	label:	"First name" %>
				</div>
				<div class="span2 offset1">
					<%= f.input	:middlename,	label:	"Middle name", required: false %>
				</div>
			</div>
			<div class="row">
				<div class="span2">
					<%= f.input :speciality, 	label:	"Coaching Responsibility" %>
				</div>
				<div class="span4 offset1">
					<%= f.input	:years_on_staff, label:  "Years on staff (e.g. 4,5, etc.)" %>
				</div>
		    </div>
	        <div id="loading">
	          <div id="loadingcontent">
	              <p id="loadingspinner">
	                  Updating Coach Info ....
	              </p>
	          </div>
	        </div>
		    <div class="row">
				<div class="span2">
					<%= f.input	:bio,	as: :text, hint:	"Some info about the coach", required: false %>
				</div>
		        <div class="span2 offset1">
					<% if @coach.team == "Unassigned" %>
						<%= select("coachteam", "team", @sport.teams.collect{ |t| [t.team_name, t.id] }, { include_blank: true } ) %>
					<% else %>
        				<%= select("coachteam", "team", @sport.teams.collect{ |t| [t.team_name, t.id] }, selected: @sport.teams.find(@coach.team).id ) %>
					<% end %>
		        </div>
				<div class="span2 offset1">
					<h4>Current coach image</h4>
					<% if !@coach.coachpic.blank? %>
						<%= image_tag @coach.coachpic.url(:medium) %>
			        <% else %>
			            <%= image_tag "Photo_Not_Available.jpg" %>
					<%end %>
					<%= f.input	:coachpic,	hint:	"Upload coaches photo. Photo will be processed in the background." %>
				</div>
			</div>
			<div class="row">
				<div class="span4 offset4">
					<%= f.button :submit, 'Submit', class:	"btn btn-medium btn-primary", id: "submitbtn" %>
				</div>
			</div>
		<% end %>	
	</div>	
</div>
