<div class="row">
	<div class="col-xs-6 col-xs-offset-2">
		<% if !contact.title.nil? %>
			<%= contact.title %><br/>
		<% end %>
		<%= contact.name %><br/>
		<% if !contact.phone.nil? %>
			Phone:&nbsp
			<%= contact.phone %><br/>
		<% end %>
		<% if !contact.mobile.nil? %>
			Mobile:&nbsp
			<%= contact.mobile %><br/>
		<% end %>
		<% if !contact.fax.nil? %>
			Fax:&nbsp
			<%= contact.fax %><br/>
		<% end %>
		Email:&nbsp
		<%= contact.email %><p>
		<% if user_signed_in? %>
			<% if site_owner? %>
				<div class="row">
					<div class="col-xs-1">
						<%= link_to "Edit", edit_sport_contact_path(@sport, contact), class: "btn btn-xs btn-primary" %>
					</div>
					<div class="col-xs-2">
						<%= link_to "Delete", sport_contact_path(@sport, contact), method: :delete, class: "btn btn-xs btn-danger", data: { confirm: "You sure?" } %>
					</div>
				</div>
			<% end %>
		<% end %>
	</div>
</div>