<div class="row">
  	<div class="col-xs-10" id="bodycolor">
  		<div class="col-xs-6 col-xs-offset-3">
        <h3>Create new contact:</h3>
        <p>
  			<%= simple_form_for [@sport, @contact] do |f| %>
  				<%= f.input :title,	hint: "Title for contact. ex: Head Coach, Athletic Director, League President, etc." %>
  				<%= f.input :name, 	hint: "Enter the name of the contact. Can be anything you like." %>
  				<%= f.input :phone, required: false %>
  				<%= f.input :mobile, required: false %>
  				<%= f.input :fax, required: false %>
  				<%= f.input :email %>
  				<%= f.submit "Submit", class: "btn btn-sm btn-primary" %>
  			<% end %>
  		</div>
	</div>
</div>
