<% provide(:title, "User Sign In") %>
<p>
<% if !current_site? %>
  <div class="row">
    <div class="col-xs-12">
      <h3>Sign into Eazesportz!</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-4">
      <%= image_tag "FootballGameStats.png", height: '400', width: '300' %>
    </div>
    <div class="col-xs-4 col-xs-offset-1">
      <%= image_tag "BasketballGameStats.png", height: '400', width: '300' %>
    </div>
  </div>
<% end %>
<div class="row">
	<div class="col-xs-10 col-xs-offset-2">
	<h3>User Sign In</h3><p>

	<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), 
						:defaults => { :input_html => { :class => "form-control" } } ) do |f| %>
		<div class="row">
			<div class="col-xs-4">
		    	<%= f.input :email, :required => false, :autofocus => true %>
		    </div>
		</div>
		<div class="row">
			<div class="col-xs-4">
	    		<%= f.input :password, :required => false %>
	    	</div>
		</div>
		<div class="row">
			<div class="col-xs-2">
				Remember me
			</div>
			<div class="col-xs-1">
	    		<%= f.check_box :remember_me, :as => :boolean if devise_mapping.rememberable? %>
	    	</div>
		</div>
		<div class="row">
			<div class="col-xs-4">
	    		<%= f.button :submit, "Sign in" %>
	    	</div>
	    </div>
	<% end %>
	<%= render "devise/shared/links" %>
</div>
</div>

