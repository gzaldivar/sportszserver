<% provide(:title, "User Sign In") %>
<p>
<% if !current_site? %>
  <div class="row">
    <div class="span10">
      <h3>Sign into Eazesportz!</h3>
    </div>
  </div>
  <div class="row">
    <div class="span4">
      <%= image_tag "BasketballConsoleLiveStats.png" %>
    </div>
    <div class="span4 offset1">
      <%= image_tag "FC_OffenseStatsPortrait.png" %>
    </div>
  </div>
<% end %>
<div class="row">
  	<div class="span7" style="background-color:#ffffff;position:relative;top:0;left:100px;">
  		<div class="row">
 			<div class="span4 offset2">
		    	<h3>User Sign In</h3><p>

				<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
				  <div class="form-inputs">
				    <%= f.input :email, :required => false, :autofocus => true %>
				    <%= f.input :password, :required => false %>
				    <%= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %>
				  </div>

				  <div class="form-actions">
				    <%= f.button :submit, "Sign in" %>
				  </div>
				<% end %>
				<%= render "devise/shared/links" %>
			</div>
		</div>
	</div>
</div>

