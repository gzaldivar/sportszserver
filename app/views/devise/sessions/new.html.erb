<% provide(:title, "User Sign In") %>
<p>
<% if !current_site? %>
  <div class="row">
    <div class="col-xs-12">
      <h3>Sign into Eazesportz!</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-4">
      <%= image_tag "FootballGameStats.png", class: 'img-responsive' %>
    </div>
    <div class="col-xs-4 col-xs-offset-1">
      <%= image_tag "BasketballGameStats.png", class: 'img-responsive' %>
    </div>
  </div>
<% end %>
<div class="row">
	<div class="col-xs-6 col-xs-offset-2">
		<h3>User Sign In</h3><p>

		<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), 
							:defaults => { :wrapper_html => {:class => 'form-group'}, :input_html => { :class => 'form-control' } } ) do |f| %>
			    	<%= f.input :email, :required => false, :autofocus => true %>
		    		<%= f.input :password, :required => false %>
					Remember me
		    		<%= f.check_box :remember_me, :as => :boolean if devise_mapping.rememberable? %>
		    		<%= f.button :submit, "Sign in" %>
		<% end %>
	</div>
</div>
<div class="row">
	<div class="col-xs-8 col-xs-offset-3">
		<%= render "devise/shared/links" %>
	</div>
</div>

