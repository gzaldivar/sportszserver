<%= hidden_field_tag "livestats", value=@live %>
<%= hidden_field_tag "gameschedule_id", value=@defense.gameschedule_id.to_s %>
<div class="row">
	<div class="col-xs-2">
        <%= label_tag "Quarter: " %>
		<%= select_tag "quarter", options_for_select(quarters), class: 'form-control' %>
	</div>
	<div class="col-xs-4 col-xs-offset-1">
        <%= label_tag "Game Time (Needed for scoring summary only): " %>
        <%= text_field_tag "time", '00:00', class: 'form-control' %>
	</div>
	<div class="col-xs-2 col-xs-offset-1">
        <%= label_tag "Return Yards: " %>
        <%= text_field_tag "int_yards", '0', class: 'form-control' %>
	</div>
</div>
<p>
<div class="row">
	<div class="col-xs-2">
        <%= label_tag "Interception: " %>
        <%= check_box_tag 'int', 1 %>
	</div>
	<div class="col-xs-2 col-xs-offset-1">
        <%= label_tag "Tackle: " %>
        <%= check_box_tag "tackles", '1' %>
	</div>
	<div class="col-xs-2 col-xs-offset-1">
        <%= label_tag "TD: " %>
        <%= check_box_tag 'int_td', 1 %>
	</div>
</div>
<p>
<div class="row">
	<div class="col-xs-2">
        <%= label_tag "Assist: " %>
        <%= check_box_tag "assists", '1' %>
	</div>
	<div class="col-xs-2 col-xs-offset-1">
        <%= label_tag "Fumbles Recovered: " %>
        <%= check_box_tag 'fumbles_recovered', 1 %>
	</div>
	<div class="col-xs-2 col-xs-offset-1">
        <%= label_tag "Sack: " %>
        <%= check_box_tag 'sack', 1 %>
	</div>
</div>
<p>
<div class="row">
	<div class="col-xs-2">
        <%= label_tag "Sack Assist: " %>
        <%= check_box_tag "sackassist", 1 %>
	</div>
	<div class="col-xs-2 col-xs-offset-1">
        <%= label_tag "Passes Defended: " %>
        <%= check_box_tag "pass_defended", 1 %>
	</div>
	<div class="col-xs-2 col-xs-offset-1">
        <%= label_tag "Safety: " %>
        <%= check_box_tag "safety", 1 %>
	</div>
</div>
<p>
<div class="row">
	<div class="col-xs-1 col-xs-offset-2">
		<%= submit_tag 'Submit', class:	"btn btn-sm btn-primary" %>
	</div>
</div>
