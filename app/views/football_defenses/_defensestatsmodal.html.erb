<div class-"row">
  <div class="col-xs-8">
    <div id="defensestats-responsive" class="modal fade" tabindex="-1" data-width="760" style="display: none;">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h4 class="modal-title">Live Defensive Score</h4>
      </div>
      <div class="modal-body">
        <div class="well">
          <div class="row">
            <div class="col-xs-2">
              <%= link_to image_tag(player.pic.url(:thumb)), sport_athlete_path(@sport, player) %>
            </div>
            <div class="col-xs-6">
              <h4>Update Live Defensive Stats for <%= link_to(player.full_name, sport_athlete_path(@sport, player)) %></h4>
            </div>
          </div>
          <p>
          <div class="row">
            <div class="col-xs-8">
              <div class="row">
                <div class="col-xs-2">
                    <a href="#livedefenseattempt-responsive" data-dismiss="modal" 
                            data-toggle="modal" class="btn btn-md btn-primary">Defensive Stats</a>
                </div>
                <div class="col-xs-2 col-xs-offset-1">
                    <button href="#livedefensescore-responsive" data-dismiss="modal"
                            data-toggle="modal" class="btn btn-md btn-primary">Defensive Score</button>
                </div>
              </div>
              <p>
              <div class="row">
                <div class="col-xs-8">
                  <h5>Use the button below to enter Stat Totals. Score logs WILL NOT be automatically generated.</h5>
                </div>
              </div>
              <div class="row">
                <div class="col-xs-2">
                    <button href="#totaldefense-responsive" data-dismiss="modal"
                            data-toggle="modal" class="btn btn-md btn-primary">Defensive Totals</button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <div class="col-xs-1">
          <button type="button" data-dismiss="modal" class="btn btn-default">Cancel</button>
        </div>
      </div>
    </div>
  </div>
</div>
<div class-"row">
  <div class="col-xs-8">
    <div id="livedefensescore-responsive" class="modal fade" tabindex="-1" data-width="760" style="display: none;">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h4 class="modal-title">Live Stats</h4>
      </div>
      <div class="modal-body">
        <div class="well">
          <div class="row">
            <div class="col-xs-2">
              <%= link_to image_tag(player.pic.url(:thumb)), sport_athlete_path(@sport, player) %>
            </div>
            <div class="col-xs-6">
              <h4>Update Live Defensive Scoring stat for <%= link_to(player.full_name, sport_athlete_path(@sport, player)) %></h4>
            </div>
          </div>
          <p>
          <div class="row">
            <div class="col-xs-11">
              <%= form_for [@sport, player, stat], :input_html => { :class => 'form-horizontal' } do |f| %>
                <%= hidden_field_tag "livestats", value="Live" %>
                <%= hidden_field_tag "gameschedule_id", value=@gameschedule.id %>
                  <div class="row">
                    <div class="col-xs-2">
                          <%= label_tag "Quarter: " %>
                      <%= select_tag "quarter", options_for_select(quarters), class: 'form-control' %>
                    </div>
                    <div class="col-xs-2 col-xs-offset-1">
                          <%= label_tag "Game Time" %>
                          <%= text_field_tag "time", '00:00', class: 'form-control' %>
                    </div>
                  </div>
                  <p>
                  <div class="row">
                    <div class="col-xs-2">
                          <%= label_tag "Interception: " %>
                          <%= check_box_tag 'int', 1 %>
                    </div>
                    <div class="col-xs-2 col-xs-offset-1">
                          <%= label_tag "Return Yards: " %>
                          <%= text_field_tag "int_yards", '0', class: 'form-control' %>
                    </div>
                  </div>
                  <p>
                  <div class="row">
                    <div class="col-xs-3">
                          <%= label_tag "Fumbles Recovered: " %>
                          <%= check_box_tag 'fumbles_recovered', 1 %>
                    </div>
                    <div class="col-xs-2 col-xs-offset-1">
                          <%= label_tag "Sack: " %>
                          <%= check_box_tag 'sack', 1 %>
                    </div>
                  </div>
                  <p>
                  <div class="row">
                    <div class="col-xs-2">
                          <%= label_tag "TD: " %>
                          <%= check_box_tag 'int_td', 1 %>
                    </div>
                    <div class="col-xs-2 col-xs-offset-1">
                          <%= label_tag "Safety: " %>
                          <%= check_box_tag "safety", 1 %>
                    </div>
                  </div>
                <p>
                <div class="row">
                  <div class="col-xs-2 col-xs-offset-2">
                    <%= submit_tag 'Submit', class: "btn btn-md btn-primary" %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <div class='col-xs-1'>
          <button type="button" data-dismiss="modal" class="btn btn-default">Cancel</button>
        </div>
     </div>
    </div>
  </div>
</div>
