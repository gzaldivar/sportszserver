<div class-"row">
  <div class="col-xs-8">
    <div id="kicker-responsive" class="modal fade" tabindex="-1" data-width="760" style="display: none;">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h4 class="modal-title">Live Kicker Stat</h4>
      </div>
      <div class="modal-body">
        <div class="well">
          <div class="row">
            <div class="col-xs-2">
              <%= link_to image_tag(player.pic.url(:thumb)), sport_athlete_path(@sport, player) %>
            </div>
            <div class="col-xs-6">
              <h4>Update Live Kicker Stats for <%= link_to(player.full_name, sport_athlete_path(@sport, player)) %></h4>
            </div>
          </div>
          <p>
          <div class="row">
            <div class="col-xs-8">
              <div class="row">
                <div class="col-xs-2">
                    <button href="#livekicker-responsive" data-dismiss="modal"
                            data-toggle="modal" class="btn btn-md btn-primary">Live</button>
                </div>
                <div class="col-xs-2 col-xs-offset-1">
                    <button href="#totalkicker-responsive" data-dismiss="modal"
                            data-toggle="modal" class="btn btn-md btn-primary">Totals</button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <div class="col-xs-1">
          <button type="button" data-dismiss="modal" class="btn btn-default">Cancel</button>
        </div>
      </div>
    </div>
  </div>
</div>
<div class-"row">
  <div class="col-xs-8">
    <div id="livekicker-responsive" class="modal fade" tabindex="-1" data-width="760" style="display: none;">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h4 class="modal-title">Live Stats</h4>
      </div>
      <div class="modal-body">
        <div class="well">
          <div class="row">
            <div class="col-xs-2">
              <%= link_to image_tag(player.pic.url(:thumb)), sport_athlete_path(@sport, player) %>
            </div>
            <div class="col-xs-6">
              <h4>Update Live Defensive Scoring stat for <%= link_to(player.full_name, sport_athlete_path(@sport, player)) %></h4>
            </div>
          </div>
          <p>
          <div class="row">
            <div class="col-xs-11">
              <%= form_for [@sport, player, stat], :input_html => { :class => 'form-horizontal' } do |f| %>
                <%= hidden_field_tag "livestats", value="Live" %>
                <%= hidden_field_tag "gameschedule_id", value=@gameschedule.id %>
                <div class="row">
                  <div class="col-xs-1">
                        <%= label_tag "Kickoff: " %>
                        <%= check_box_tag "koattempts", 1 %>
                  </div>
                  <div class="col-xs-1 col-xs-offset-1">
                        <%= label_tag "Touchbacks: " %>
                        <%= check_box_tag "kotouchbacks", 1 %>
                  </div>
                  <div class="col-xs-1 col-xs-offset-1">
                        <%= label_tag "Return yards: " %>
                        <%= text_field_tag "koreturned", '0', class: 'form-control' %>
                  </div>
                </div>
                <p>
                <div class="row">
                  <div class="col-xs-2 col-xs-offset-2">
                    <%= submit_tag 'Submit', class: "btn btn-md btn-primary" %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <div class="col-xs-1">
          <button type="button" data-dismiss="modal" class="btn btn-default">Cancel</button>
        </div>
      </div>
    </div>
  </div>
</div>
<div class-"row">
  <div class="col-xs-8">
    <div id="totalkicker-responsive" class="modal fade" tabindex="-1" data-width="760" style="display: none;">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h4 class="modal-title">Live Stats</h4>
      </div>
      <div class="modal-body">
        <div class="well">
          <div class="row">
            <div class="col-xs-2">
              <%= link_to image_tag(player.pic.url(:thumb)), sport_athlete_path(@sport, player) %>
            </div>
            <div class="col-xs-9">
              <h4>Update Live Stats for <%= link_to(player.full_name, sport_athlete_path(@sport, player)) %></h4>
            </div>
          </div>
          <p>
          <div class="row">
            <div class="col-xs-11">
              <%= form_for [@sport, player, stat], :input_html => { :class => 'form-horizontal' } do |f| %>
                  <%= render 'shared/error_messages', object: f.object %>
                  <%= f.hidden_field :livestats, value: "Totals" %>
                  <%= f.hidden_field :gameschedule_id, value: @gameschedule.id %>
                  <div class="row">
                    <div class="col-xs-2">
                      Kickoff Attempts
                    </div>
                    <div class="col-xs-2">
                      Touchbacks
                    </div>
                    <div class="col-xs-2">
                      KO Returned Yards
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-xs-1">
                      <%= f.text_field :koattempts, class: 'form-control' %>
                    </div>
                    <div class="col-xs-1 col-xs-offset-1">
                      <%= f.text_field :kotouchbacks, class: 'form-control' %>
                    </div>
                    <div class="col-xs-1 col-xs-offset-1">
                      <%= f.text_field :koreturned, class: 'form-control' %>
                    </div>
                  </div>
                  <p>
                  <div class="row">
                    <div class="col-xs-2 col-xs-offset-3">
                      <%= f.submit "Submit", class:  "btn btn-md btn-primary" %>
                    </div>
                  </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <div class="col-xs-1">
          <button type="button" data-dismiss="modal" class="btn btn-default">Cancel</button>
        </div>
      </div>
    </div>
  </div>
</div>
