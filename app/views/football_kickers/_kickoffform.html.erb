<%= simple_form_for [@sport, @athlete, @stat, @kicker] do |f| %>
	<%= render 'shared/error_messages', object: f.object %>
	<div class="row">
		<div class="col-xs-2">
			<%= f.input :koattempts, label: "Kickoff Attempts" %>
		</div>
		<div class="col-xs-2 col-xs-offset-1">
			<%= f.input :kotouchbacks, label: "Touchbacks" %>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-2">
			<%= f.input :koreturned, label: "Kickoff Returned Yards" %>
		</div>
	</div>
	<p>
	<div class="row">
		<div class="col-xs-2 col-xs-offset-2">
			<%= f.button :submit, 'Submit', class:	"btn btn-sm btn-primary" %>
		</div>
	</div>
<% end %>
