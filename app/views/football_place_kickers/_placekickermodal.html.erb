<div class-"row">
  <div class="col-xs-8">
    <div id="placekicker-responsive" class="modal fade" tabindex="-1" data-width="760" style="display: none;">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h4 class="modal-title">Live Place Kicker Stat</h4>
      </div>
      <div class="modal-body">
        <div class="well">
          <div class="row">
            <div class="col-xs-2">
              <%= link_to image_tag(player.pic.url(:thumb), class: 'img-responsive'), sport_athlete_path(@sport, player) %>
            </div>
            <div class="col-xs-6">
              <h4>Update Live Place Kicker Stats for <%= link_to(player.full_name, sport_athlete_path(@sport, player)) %></h4>
            </div>
          </div>
          <p>
          <div class="row">
            <div class="col-xs-8">
              <div class="row">
                <div class="col-xs-2">
                    <button href="#liveplacekickerscore-responsive" data-dismiss="modal"
                            data-toggle="modal" class="btn btn-md btn-primary">Place Kicker Score</button>
                </div>
              </div>
              <p>
              <div class="row">
                <div class="col-xs-8">
                  <h5 class="text-warning">Use the button below to enter Stat Totals.</h5>
                </div>
              </div>
              <div class="row">
                <div class="col-xs-2">
                    <button href="#totalplacekicker-responsive" data-dismiss="modal"
                            data-toggle="modal" class="btn btn-md btn-primary">Place Kicker Totals</button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <div class="col-xs-1">
          <button type="button" data-dismiss="modal" class="btn btn-default">Cancel</button>
        </div>
      </div>
    </div>
  </div>
</div>
<div class-"row">
  <div class="col-xs-8">
    <div id="liveplacekickerscore-responsive" class="modal fade" tabindex="-1" data-width="760" style="display: none;">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h4 class="modal-title">Live Stats</h4>
      </div>
      <div class="modal-body">
        <div class="well">
          <div class="row">
            <div class="col-xs-2">
              <%= link_to image_tag(player.pic.url(:thumb)), sport_athlete_path(@sport, player) %>
            </div>
            <div class="col-xs-6">
              <h4>Update Live Defensive Scoring stat for <%= link_to(player.full_name, sport_athlete_path(@sport, player)) %></h4>
            </div>
          </div>
          <p>
          <div class="row">
            <div class="col-xs-11">
              <%= form_for [@sport, player, stat], :input_html => { :class => 'form-horizontal' } do |f| %>
                <%= hidden_field_tag "livestats", value="Live" %>
                <%= hidden_field_tag "gameschedule_id", value=@gameschedule.id %>
                <div class="row">
                  <div class="col-xs-2">
                        <%= label_tag "Quarter: " %>
                    <%= select_tag "quarter", options_for_select(quarters), class: 'form-control' %>
                  </div>
                  <div class="col-xs-2 col-xs-offset-1">
                        <%= label_tag "Game Time" %>
                        <%= text_field_tag "time", '00:00', class: 'form-control' %>
                  </div>
                </div>
                <p>
                <h4>Field Goals Made</h4>
                <div class="row">
                  <div class="col-xs-1">
                        <%= label_tag "Made: " %>
                        <%= check_box_tag 'fgmade', 1 %>
                  </div>
                  <div class="col-xs-1 col-xs-offset-1">
                        <%= label_tag "Distance: " %>
                        <%= text_field_tag 'fglong', '0', class: 'form-control' %>
                  </div>
                </div>
                <h4>Field Goals Missed or Blocked</h4>
                <div class="row">
                  <div class="col-xs-1">
                        <%= label_tag "Missed: " %>
                        <%= check_box_tag 'fgmissed', 1 %>
                  </div>
                  <div class="col-xs-1 col-xs-offset-1">
                        <%= label_tag "Blocked: " %>
                        <%= check_box_tag "fgblocked", 1 %>
                  </div>
                </div>
                <p>
                <h4>Extra Points</h4>
                <div class="row">
                  <div class="col-xs-1">
                        <%= label_tag "Made: " %>
                        <%= check_box_tag 'xpmade', 1 %>
                  </div>
                  <div class="col-xs-1 col-xs-offset-1">
                        <%= label_tag "Missed: " %>
                        <%= check_box_tag 'xpmissed' %>
                  </div>
                  <div class="col-xs-1 col-xs-offset-1">
                        <%= label_tag "Blocked: " %>
                        <%= check_box_tag 'xpblocked', 1 %>
                  </div>
                </div>
                <p>
                <div class="row">
                  <div class="col-xs-2 col-xs-offset-2">
                    <%= submit_tag 'Submit', class: "btn btn-md btn-primary" %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <div class="col-xs-1">
          <button type="button" data-dismiss="modal" class="btn btn-default">Cancel</button>
        </div>
      </div>
    </div>
  </div>
</div>
<div class-"row">
  <div class="col-xs-8">
    <div id="totalplacekicker-responsive" class="modal fade" tabindex="-1" data-width="760" style="display: none;">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h4 class="modal-title">Live Stats</h4>
      </div>
      <div class="modal-body">
        <div class="well">
          <div class="row">
            <div class="col-xs-2">
              <%= link_to image_tag(player.pic.url(:thumb)), sport_athlete_path(@sport, player) %>
            </div>
            <div class="col-xs-9">
              <h4>Update Live Stats for <%= link_to(player.full_name, sport_athlete_path(@sport, player)) %></h4>
            </div>
          </div>
          <div class="row">
            <div class="col-xs-11">
              <%= form_for [@sport, player, stat], :input_html => { :class => 'form-horizontal' } do |f| %>
                  <%= render 'shared/error_messages', object: f.object %>
                  <div class="row">
                    <div class="col-xs-11">
                      <h5 class="text-danger">You can edit stat totals here. If you want to update FGM or XPM fields, your should enter the score via live stats so scoring entries will be automatically generated, If you want to delete a FGM or XPM, you should delete the scoring entry from the game page and the stats will automatically be updated.</h5>
                    </div>
                  </div>
                  <%= f.hidden_field :livestats, value: "Totals" %>
                  <%= f.hidden_field :gameschedule_id, value: @gameschedule.id %>
                  <h4>Field Goals</h4>
                  <div class="row">
                    <div class="col-xs-1">
                      <%= f.label :FGA %>
                      <%= f.text_field :fgattempts, class: 'form-control' %>
                    </div>
                    <div class="col-xs-1 col-xs-offset-1">
                      <%= f.label :FGM %>
                      <%= f.text_field :fgmade, class: 'form-control' %>
                    </div>
                    <div class="col-xs-1 col-xs-offset-1">
                      <%= f.label "Blocked" %>
                      <%= f.text_field :fgblocked, class: 'form-control' %>
                    </div>
                    <div class="col-xs-1 col-xs-offset-1">
                      <%= f.label :long %>
                      <%= f.text_field :fglong, class: 'form-control' %>
                    </div>
                  </div>
                  <h4>Extra Points</h4>
                  <div class="row">
                    <div class="col-xs-1 ">
                      <%= f.label :XPA %>
                      <%= f.text_field :xpattempts, class: 'form-control' %>
                    </div>
                    <div class="col-xs-1 col-xs-offset-1">
                      <%= f.label :XPM %>
                      <%= f.text_field :xpmade, class: 'form-control' %>
                    </div>
                    <div class="col-xs-1 col-xs-offset-1">
                      <%= f.label :XPM %>
                      <%= f.text_field :xpmissed, class: 'form-control' %>
                    </div>
                    <div class="col-xs-1 col-xs-offset-1">
                      <%= f.label :blocked %>
                      <%= f.text_field :xpblocked, class: 'form-control' %>
                    </div>
                  </div>
                  <p>
                  <div class="row">
                    <div class="col-xs-2 col-xs-offset-3">
                      <%= f.submit "Submit", class:  "btn btn-md btn-primary" %>
                    </div>
                  </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <div class="col-xs-1">
          <button type="button" data-dismiss="modal" class="btn btn-default">Cancel</button>
        </div>
      </div>
    </div>
  </div>
</div>
