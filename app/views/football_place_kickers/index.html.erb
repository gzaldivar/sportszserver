<% provide(:title, current_site.sitename + " " + @sport.name + ' - ' + @athlete.full_name) %>
<p>
<div class="row">
	<div class="col-xs-2">
		<%= link_to image_tag(@athlete.pic.url(:thumb)), sport_athlete_path(@sport, @athlete) %>
	</div>
	<div class="col-xs-6">
		<h4>Place Kicker stats for <%= link_to(@athlete.full_name, sport_athlete_path(@sport, @athlete)) %></h4>
	</div>
</div>
<div class="row">
	<div class="col-xs-10">
		<h5>Field Goal Statistics</h5>
		<table class="table table-bordered">
			<%= render "fieldgoal_header", name: "Game" %>
			<% @stats.each do |s| %>
				<%= render "fieldgoal_body", stat: s, player: @athlete, name: Gameschedule.find(s.gameschedule_id) %>
			<% end %>
			<%= render 'fieldgoal_body', stat: @totals, player: @athlete, name: "Totals" %>
		</table>
	</div>
</div>
<div class="row">
	<div class="col-xs-10">
		<h5>Extra Points Statistics</h5>
		<table class="table table-bordered">
			<%= render "extrapoint_header", name: "Game" %>
			<% @stats.each do |s| %>
				<%= render "extrapoint_body", stat: s, player: @athlete, name: Gameschedule.find(s.gameschedule_id) %>
			<% end %>
			<%= render 'extrapoint_body', stat: @totals, player: @athlete, name: "Totals" %>
		</table>
	</div>
</div>
