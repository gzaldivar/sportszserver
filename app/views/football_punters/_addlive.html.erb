<%= hidden_field_tag "livestats", value=@live %>
<%= hidden_field_tag "gameschedule_id", value=@punter.gameschedule_id.to_s %>
<h4>Punts</h4>
<div class="row">
	<div class="col-xs-2">
        <%= label_tag "Punts: " %>
        <%= check_box_tag "punts", 1 %>
	</div>
	<div class="col-xs-2 col-xs-offset-1">
        <%= label_tag "Blocked: " %>
        <%= check_box_tag 'punts_blocked', 1 %>
	</div>
	<div class="col-xs-2 col-xs-offset-1">
        <%= label_tag "Punt Yards: " %>
        <%= text_field_tag 'punts_yards', '0' %>
	</div>
</div>
<div class="row">
	<div class="col-xs-1 col-xs-offset-4">
		<%= submit_tag 'Submit', class:	"btn btn-sm btn-primary" %>
	</div>
</div>
