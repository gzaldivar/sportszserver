<% provide(:title, current_site.sitename + " " + @sport.name + ' - ' + @athlete.full_name) %>
<p>
<div class="row">
	<div class="col-xs-2">
		<%= link_to image_tag(@athlete.pic.url(:thumb)), sport_athlete_path(@sport, @athlete) %>
	</div>
	<div class="col-xs-6">
		<h4>Punter statistics for <%= link_to(@athlete.full_name, sport_athlete_path(@sport, @athlete)) %></h4>
	</div>
</div>
<p>
<div class="row">
	<div class="col-xs-10">
		<table class="table table-bordered">
			<em><%= render "stat_header", name: "Game" %></em>
			<%= render "stat_body", stat: @punter, player: @athlete, name: @gameschedule %>
		</table>
	</div>
</div>
<div class="row">
	<div class="col-xs-2 col-xs-offset-4">
		<%= link_to "Totals", sport_athlete_football_punters_path(@sport, @athlete, gameschedule_id: @punter.gameschedule_id), 
			class: "btn btn-sm btn-primary"%>
	</div>
</div>
<div class="row">
	<%= render "layouts/sponsor" %>
</div>
