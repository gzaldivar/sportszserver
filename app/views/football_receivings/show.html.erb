<% provide(:title, current_site.sitename + " " + @sport.name + ' - ' + @athlete.full_name) %>
<p>
<div class="row">
	<div class="col-xs-10">
		<h4>Receiving game statistics for <%= link_to @athlete.full_name, [@sport, @athlete] %> for <%= @gameschedule.game_name %></h4>
		<table class="table table-bordered">
			<%= render 'stat_header', name: "Game" %>
			<%= render 'stat_body', stat: @receiving, player: @athlete, name: @gameschedule %>
		</table>
	</div>
</div>
<div class="row">
	<div class="col-xs-2 col-xs-offset-4">
		<%= link_to "Totals", sport_athlete_football_receivers_path(@sport, @athlete, gameschedule_id: @receiving.gameschedule_id), 
			class: "btn btn-sm btn-primary"%>
	</div>
</div>
<div class="row">
	<%= render "layouts/sponsor" %>
</div>
