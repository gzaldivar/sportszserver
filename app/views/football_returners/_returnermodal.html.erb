<div class-"row">
  <div class="col-xs-8">
    <div id="returner-responsive" class="modal fade" tabindex="-1" data-width="760" style="display: none;">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h4 class="modal-title">Live Stats</h4>
      </div>
      <div class="modal-body">
        <div class="well">
          <div class="row">
            <div class="col-xs-2">
              <%= link_to image_tag(player.pic.url(:thumb)), sport_athlete_path(@sport, player) %>
            </div>
            <div class="col-xs-9">
              <h4>Update Live Stats for <%= link_to(player.full_name, sport_athlete_path(@sport, player)) %></h4>
            </div>
          </div>
          <p>
          <div class="row">
            <div class="col-xs-8">
              <div class="row">
                <div class="col-xs-2">
                    <button href="#livereturnerscore-responsive" data-dismiss="modal"
                            data-toggle="modal" class="btn btn-md btn-primary">Returner Score</button>
                </div>
                <div class="col-xs-2 col-xs-offset-1">
                    <button href="#livereturner-responsive" data-dismiss="modal"
                            data-toggle="modal" class="btn btn-md btn-primary">Returner Stats</button>
                </div>
              </div>
              <p>
              <div class="row">
                <div class="col-xs-8">
                  <h5 class="text-warning">Use the button below to enter Stat Totals.</h5>
                </div>
              </div>
              <div class="row">
                <div class="col-xs-2">
                    <button href="#totalreturner-responsive" data-dismiss="modal"
                            data-toggle="modal" class="btn btn-md btn-primary">Stat Totals</button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <div class="col-xs-1">
          <button type="button" data-dismiss="modal" class="btn btn-md btn-primary">Close</button>
        </div>
      </div>
    </div>
  </div>
</div>
<div class-"row">
  <div class="col-xs-8">
    <div id="livereturnerscore-responsive" class="modal fade" tabindex="-1" data-width="760" style="display: none;">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h4 class="modal-title">Live Stats</h4>
      </div>
      <div class="modal-body">
        <div class="well">
          <div class="row">
            <div class="col-xs-2">
              <%= link_to image_tag(player.pic.url(:thumb)), sport_athlete_path(@sport, player) %>
            </div>
            <div class="col-xs-6">
              <h4>Update Live Defensive Scoring stat for <%= link_to(player.full_name, sport_athlete_path(@sport, player)) %></h4>
            </div>
          </div>
          <p>
          <div class="row">
            <div class="col-xs-11">
              <%= form_for [@sport, player, stat], :input_html => { :class => 'form-horizontal' } do |f| %>
                <%= hidden_field_tag "livestats", value="Live" %>
                <%= hidden_field_tag "gameschedule_id", value=@gameschedule.id %>
                <div class="row">
                  <div class="col-xs-2">
                        <%= label_tag "Quarter: " %>
                    <%= select_tag "quarter", options_for_select(quarters), class: 'form-control' %>
                  </div>
                  <div class="col-xs-2 col-xs-offset-1">
                        <%= label_tag "Game Time" %>
                        <%= text_field_tag "time", '00:00', class: 'form-control' %>
                  </div>
                </div>
                <p>
                <h5>Punt Return Statistics</h5>
                <div class="row">
                  <div class="col-xs-2">
                        <%= label_tag "Punt Return Yards: " %>
                        <%= text_field_tag 'punt_returnyards', '0', class: 'form-control' %>
                  </div>
                  <div class="col-xs-2 col-xs-offset-1">
                        <%= label_tag "Punt Return for TD: " %>
                        <%= check_box_tag 'punt_returntd', 1 %>
                  </div>
                </div>
                <p>
                <h5>Kickoff Return Statistics</h5>
                <div class="row">
                  <div class="col-xs-2">
                        <%= label_tag "Kickoff Return Yards: " %>
                        <%= text_field_tag 'koyards', '0', class: 'form-control' %>
                  </div>
                  <div class="col-xs-2 col-xs-offset-1">
                        <%= label_tag "Kickoff Return for TD: " %>
                        <%= check_box_tag 'kotd', 1 %>
                  </div>
                </div>
                <p>
                <div class="row">
                  <div class="col-xs-2 col-xs-offset-2">
                    <%= submit_tag 'Submit', class: "btn btn-md btn-primary" %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <div class="col-xs-1">
          <button type="button" data-dismiss="modal" class="btn btn-md btn-primary">Cancel</button>
        </div>
      </div>
    </div>
  </div>
</div>
