<% provide(:title, current_site.sitename + " " + @sport.name + ' - ' + @athlete.full_name) %>
<p>
<div class="row">
	<div class="span2">
		<%= link_to image_tag(@athlete.pic.url(:thumb)), sport_athlete_path(@sport, @athlete) %>
	</div>
	<div class="span6">
		<h4>Returner stats for <%= link_to(@athlete.full_name, sport_athlete_path(@sport, @athlete)) %></h4>
	</div>
</div>
<div class="row">
	<div class="span10">
		<h5>Punt Return Statistics</h5>
		<table class="table table-bordered">
			<%= render "puntreturn_header", name: "Game" %>
			<% @stats.each do |s| %>
				<%= render "puntreturn_body", stat: s, player: @athlete, name: Gameschedule.find(s.gameschedule_id) %>
			<% end %>
			<%= render 'puntreturn_body', stat: @totals, player: @athlete, name: "Totals" %>
		</table>
	</div>
</div>
<div class="row">
	<div class="span10">
		<h5>Kickoff Return Statistics</h5>
		<table class="table table-bordered">
			<%= render "koreturn_header", name: "Game" %>
			<% @stats.each do |s| %>
				<%= render "koreturn_body", stat: s, player: @athlete, name: Gameschedule.find(s.gameschedule_id) %>
			<% end %>
			<%= render 'koreturn_body', stat: @totals, player: @athlete, name: "Totals" %>
		</table>
	</div>
</div>
