<div class="row">
	<div class="col-xs-2">
		<%= f.input :livestats, as: :hidden, :input_html => { :value => "Totals" } %>
		<%= f.input :attempts, label: "Rushing Attempts", required: true %>
	</div>
	<div class="col-xs-2 col-xs-offset-1">
		<%= f.input :yards, required: true %>
	</div>
	<div class="col-xs-2 col-xs-offset-1">
		<%= f.input :longest %>
	</div>
</div>
<div class="row">
	<div class="col-xs-2">
		<%= f.input :td, label: "Touchdowns" %>
	</div>
	<div class="col-xs-2 col-xs-offset-1">
		<%= f.input :fumbles %>
	</div>
	<div class="col-xs-2 col-xs-offset-1">
		<%= f.input :fumbles_lost %>
	</div>
</div>
<div class="row">
	<div class="col-xs-2">
		<%= f.input :firstdowns, label: "First Downs:" %>
	</div>
	<div class="col-xs-4 col-xs-offset-1">
		<%= f.input :twopointconv,  label: "Enter Number of 2 point conversions" %>
	</div>
</div>
<p>
<div class="col-xs-2 col-xs-offset-3">
	<%= f.button :submit, 'Submit', class:	"btn btn-sm btn-primary" %>
</div>
