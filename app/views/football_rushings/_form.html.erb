<div class="row">
	<div class="span2">
		<%= f.input :attempts, label: "Rushing Attempts", required: true %>
	</div>
	<div class="span2 offset1">
		<%= f.input :yards, required: true %>
	</div>
	<div class="span2 offset1">
		<%= f.input :longest %>
	</div>
</div>
<div class="row">
	<div class="span2">
		<%= f.input :td, label: "Touchdowns" %>
	</div>
	<div class="span2 offset1">
		<%= f.input :fumbles %>
	</div>
	<div class="span2 offset1">
		<%= f.input :fumbles_lost %>
	</div>
</div>
<div class="row">
	<div class="span2">
		<%= f.input :firstdowns, label: "First Downs:" %>
	</div>
	<div class="span4 offset1">
		<%= f.input :twopointconv,  label: "Enter Number of 2 point conversions" %>
	</div>
</div>
<p>
<div class="span2 offset3">
	<%= f.button :submit, 'Submit', class:	"btn btn-medium btn-primary" %>
</div>
