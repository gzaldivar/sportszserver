<% provide(:title, current_site.sitename + " " + @sport.name + ' - ' + @athlete.full_name) %>
<p>
<script>
  	$(document).ready(function() {
	    $(window).load(function() {
		   $('#liverushing-responsive').modal('show')
		});
	});	
</script>
<div class="row">
	<div class="col-xs-2">
		<%= link_to image_tag(@athlete.pic.url(:thumb)), sport_athlete_path(@sport, @athlete) %>
	</div>
	<div class="col-xs-6">
		<h4>Rushing game statistics for <%= link_to(@athlete.full_name, sport_athlete_path(@sport, @athlete)) %></h4>
	</div>
	<div class="col-xs-1 col-xs-offset-2">
        <button href="#liverushing-responsive" data-dismiss="modal" data-toggle="modal" class="btn btn-sm btn-primary">Update</button>
	</div>
</div>
<p>
<div class="row">
	<div class="col-xs-11">
		<table class="table table-striped table-bordered table-hover">
			<thead>
				<th>ATT</th>
				<th>YDS</th>
				<th>AVG</th>
				<th>TD</th>
			</thead>
			<tbody>
				<td><%= @rushing.attempts %></td>
				<td><%= @rushing.yards %></td>
				<td><%= number_with_precision(@rushing.comp_average, precision: 2) %></td>
				<td><%= @rushing.td %></td>
			</tbody>
		</table>
	</div>
</div>
<div class="row">
	<div class="col-xs-11">
		<table class="table table-striped table-bordered table-hover">
			<thead>
				<th>FD</th>
				<th>FUMB</th>
				<th>FUMB LOST</th>
				<th>2PT</th>
			</thead>
			<tbody>
				<td><%= @rushing.firstdowns %></td>
				<td><%= @rushing.fumbles %></td>
				<td><%= @rushing.fumbles_lost %></td>
				<td><%= @rushing.twopointconv %></td>
			</tbody>
		</table>
	</div>
</div>
<div class="row">
	<%= render "layouts/sponsor" %>
</div>
<%= render 'liverushingmodal', stat: @rushing, player: @athlete %>
