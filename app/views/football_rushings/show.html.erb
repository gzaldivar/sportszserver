<% provide(:title, current_site.sitename + " " + @sport.name + ' - ' + @athlete.full_name) %>
<p>
<div class="row">
	<div class="span9 offset1">
		<p>
		<!--%= render 'tabs_game' %-->
		<p>
		<h4>Rushing game statistics for <%= link_to @athlete.full_name, [@sport, @athlete] %> for <%= @stat.gameschedule.game_name %></h4>
		<p>
		<table class="table table-bordered">
			<em>
			<thead>
				<th>Rushing Attempts</th>
				<th>Rushing Yards</th>
				<th>Average</th>
			</thead>
			</em>
			<tbody>
				<td><%= @rushing.attempts %></td>
				<td><%= @rushing.yards %></td>
				<td><%= @rushing.average %></td>
			</tbody>
		</table>
		<table class="table table-bordered">
			<thead>
				<th>Rushing TD</th>
				<th>Fumbles</th>
				<th>Fumbles Lost</th>
			</thead>
			<tbody>
				<td><%= @rushing.td %></td>
				<td><%= @rushing.fumbles %></td>
				<td><%= @rushing.fumbles_lost %></td>
			</tbody>
		</table>
		<% if isAdmin? or isTeamManager?(@athlete) %>
			<div class="span2 offset3">
				<%= link_to "Edit", edit_sport_athlete_football_stat_football_rushing_path(@sport, @athlete, @stat, @rushing), 
							class: "btn btn-medium btn-primary" %>
				<%= link_to "Delete", sport_athlete_football_stat_football_rushing_path(@sport, @athlete, @stat, @rushing), method: :delete, 
							class: "btn btn-medium btn-danger" %>
			</div>
		<% end %>
	</div>
</div>
<div class="row">
	<%= render "layouts/sponsor" %>
</div>