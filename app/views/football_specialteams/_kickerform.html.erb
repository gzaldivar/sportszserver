<%= simple_form_for [@sport, @athlete, @stat, @specialteams] do |f| %>
	<%= render 'shared/error_messages', object: f.object %>
	<div class="row">
		<div class="col-xs-2">
			<%= f.input :fgattempts, label: "Field Goal Attempts" %>
		</div>
		<div class="col-xs-2 col-xs-offset-1">
			<%= f.input :fgmade, label: "Field Goals Made" %>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-2">
			<%= f.input :fgblocked, label: "Blocked" %>
		</div>
		<div class="col-xs-2 col-xs-offset-1">
			<%= f.input :fglong, label: "Longest" %>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-2 ">
			<%= f.input :xpattempts, label: "Extra Point Attempts" %>
		</div>
		<div class="col-xs-2 col-xs-offset-1">
			<%= f.input :xpmade, label: "Extra Points Made" %>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-2 ">
			<%= f.input :xpmissed, label: "Extra Point Missed" %>
		</div>
		<div class="col-xs-2 col-xs-offset-1">
			<%= f.input :xpblocked, label: "Extra Points Blocked" %>
		</div>
	</div>
	<p>
	<div class="col-xs-2 col-xs-offset-2">
		<%= f.button :submit, 'Submit', class:	"btn btn-sm btn-primary" %>
	</div>
<% end %>
