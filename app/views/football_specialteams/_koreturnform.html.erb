<%= simple_form_for [@sport, @athlete, @stat, @specialteams] do |f| %>
	<%= render 'shared/error_messages', object: f.object %>
	<div class="row">
		<div class="col-xs-2">
			<%= f.input :koreturns, label: "Kickoff Returns" %>
		</div>
		<div class="col-xs-2 col-xs-offset-1">
			<%= f.input :kotd, label: "Kickoff Return for TD" %>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-2">
			<%= f.input :kolong, label: "Kickoff Longest Return" %>
		</div>
		<div class="col-xs-2 col-xs-offset-1">
			<%= f.input :koyards, label: "Kickoff Return Yards" %>
		</div>
	</div>
	<p>
	<div class="col-xs-2 col-xs-offset-2">
		<%= f.button :submit, 'Submit', class:	"btn btn-sm btn-primary" %>
	</div>
<% end %>
