<%= simple_form_for [@sport, @athlete, @stat, @specialteams] do |f| %>
	<%= render 'shared/error_messages', object: f.object %>
	<div class="row">
		<div class="col-xs-2">
			<%= f.input :punts, label: "Punt Attempts", required: true %>
		</div>
		<div class="col-xs-2 col-xs-offset-1">
			<%= f.input :punts_yards, label: "Total Punt Yards" %>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-2">
			<%= f.input :punts_long, label: "Longest" %>
		</div>
		<div class="col-xs-2 col-xs-offset-1">
			<%= f.input :punts_blocked, label: "Punts Blocked" %>
		</div>
	</div>
	<p>
	<div class="col-xs-2 col-xs-offset-2">
		<%= f.button :submit, 'Submit', class:	"btn btn-sm btn-primary" %>
	</div>
<% end %>
