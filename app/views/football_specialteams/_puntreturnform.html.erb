<%= simple_form_for [@sport, @athlete, @stat, @specialteams] do |f| %>
	<%= render 'shared/error_messages', object: f.object %>
	<div class="row">
		<div class="col-xs-2">
			<%= f.input :punt_return, label: "Punt Returns" %>
		</div>
		<div class="col-xs-2 col-xs-offset-1">
			<%= f.input :punt_returntd, label: "Punt Return TD" %>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-2">
			<%= f.input :punt_returnlong, label: "Longest Return" %>
		</div>
		<div class="col-xs-2 col-xs-offset-1">
			<%= f.input :punt_returnyards, label: "Punt Return Yards" %>
		</div>
	</div>
	<p>
	<div class="col-xs-2 col-xs-offset-2">
		<%= f.button :submit, 'Submit', class:	"btn btn-sm btn-primary" %>
	</div>
<% end %>
