				</tbody>
			</table>
			<p>
			<% if isAdmin? or isTeamManager?(@athlete) %>
				<div class="span2 offset3">
					<%= link_to "Edit", editkoreturn_sport_athlete_football_stat_football_specialteams_path(@sport, @athlete, @stat, @specialteams), class: "btn btn-mini btn-primary" %>
					<%= link_to "Delete", sport_athlete_football_stat_football_specialteam_path(@sport, @athlete, @stat, @specialteams), method: :delete, class: "btn btn-mini btn-danger" %>
				</div>
			<% end %>
		<% end %>
		<br/><p>
		<div class="row">
			<div class="span1 offset3">
				<%= link_to "Totals", specialteams_sport_athlete_football_stats_path(@sport, @athlete), class: "btn btn-mini btn-primary" %>
			</div>
		</div>
	</div>
</div>