				<em>
				<thead>
					<th>Punt Returns</th>
					<th>Return Yards</th>
					<th>Return TD</th>
					<th>Longest</th>
				</thead>
			</em>
				<tbody>
					<td><%= @specialteams.punt_return %></td>
					<td><%= @specialteams.punt_returnyards %></td>
					<td><%= @specialteams.punt_returntd %></td>
					<td><%= @specialteams.punt_returnlong %></td>
				</tbody>
			</table>
			<p>
			<% if isAdmin? or isTeamManager?(@athlete) %>
				<div class="span2 offset3">
					<%= link_to "Edit", editpuntreturn_sport_athlete_football_stat_football_specialteams_path(@sport, @athlete, @stat, @specialteams), class: "btn btn-mini btn-primary" %>
					<%= link_to "Delete", sport_athlete_football_stat_football_specialteam_path(@sport, @athlete, @stat, @specialteams), method: :delete, class: "btn btn-mini btn-danger" %>
			</div>
			<% end %>
		<% end %>
		<br/><p>
		<% if !@specialteams.koreturns.nil? %>
			<p>
			<h4>Kickoff Return statistics for <%= link_to @athlete.full_name, [@sport, @athlete] %> for<br/>
