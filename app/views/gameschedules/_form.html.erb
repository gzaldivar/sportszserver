<div class="row">
	<div class="span10 offset1">
		<%= simple_form_for [@sport, @team, @gameschedule], html: { class: 'form-horizontal' } do |f| %>
			<%= render 'shared/error_messages', object: f.object %>
			<div class="row">
				<div class="span4">
					<%= f.input :startdate, as: :string, input_html: { class: 'datepicker', 
											:value => @gameschedule.try(:gamedate).try(:strftime,'%m/%d/%Y') } %>
					<%= f.input :gamedate, :as => :hidden, :input_html => { :id => 'recorded-at-alt'} %>
					<!--%= f.input :gamedate,  as: :date, start_year: Date.today.year, start_month: Date.today, 
					 			ignore_time: true %-->
				</div>
				<div class="span4 offset1">
					We encourage you to upload an image for your opponent if you have one. Looks good on the mobile app. Your team logo or mascot logo will be used on the mobile for your team.<p>
					<h5>Current opponent image</h5>
					<% if !@gameschedule.opponentpic.blank? %>
						<%= image_tag @gameschedule.opponentpic.url(:medium) %>
		          	<% else %>
		          		<h5>We will use the image for the opponent if you don't upload one.</h5>
		            	<%= image_tag "teambutton.jpg" %>
					<%end %>
					<%= f.input	:opponentpic,	label: "Opponent image:", hint: "Change image" %>
				</div>
			</div>
			<div class="row">
				<div class="span10">
					<%= f.input	:starttime, label: "Start Time:", as: :time, ignore_date:  true, input_html: { style: "width: 50px" } %>
				</div>
			</div>
			<div class="row">
				<div class="span2">
					<%= f.input :homeaway, label: "Home or Away?" %>
				</div>
				<div class="span2 offset1">
					<%= f.input	:opponent %>
				</div>
				<div class="span2 offset1">
					<%= f.input	:opponent_mascot, label: "Opponent Mascot" %>
				</div>
			</div>
			<div class="row">
				<div class="span3">
					<%= f.input :location %>
				</div>
				<div class="span5">
					<%= f.input	:event, hint:	"Senior day, Homecoming, etc.", required: false %>	
				</div>
			</div>
			<p>
			<h5>Real Time Game Summary:</h5>
			<p>
			<div class="row">
				<div class="span2">
					<%= f.input :livegametime, label: "Live Game Time:", as: :time, ignore_date: true, input_html: { style: "width: 50px" } %>
					<!--%= f.input :current_game_time, label: "Game Time", input_html: { style: "width: 50px" } %-->
				</div>
				<div class="span2 offset1">
					<%= f.input :our, label: "Ball Position", collection: [ @team.team_name, @gameschedule.opponent ] %>
				</div>
				<div class="span1 offset1">
					<%= f.input :ballon, label: "Ball On:", input_html: { style: "width: 50px" } %>
				</div>
				<div class="span1 offset1">
					<%= f.input :possession, collection: ["Home", "Opponent"], input_html: { style: "width: 80px" }  %>
				</div>
			</div>
			<div class="row">
				<div class="span1">
					<%= f.input :down, collection: 1..4, input_html: { style: "width: 50px" } %>
				</div>
				<div class="span1 offset1">
					<%= f.input :togo, label: "To Go", input_html: { style: "width: 50px" } %>
				</div>
				<div class="span6 offset1">
					<%= f.input :lastplay, label: "Last Play:", input_html: { style: "width: 460px" } %>
				</div>
			</div>
			<div class="row">
				<div class="span2">
					<%= f.input :final, as: :boolean, label: "Mark game as final" %>
				</div>
			</div>
			<p>
			<h5>Game Score:</h5>
			<p>
			<div class="row">
				<div class="span1">
					<%= f.input :homeq1, label: "Q1 Score", input_html: { style: "width: 50px" } %>
				</div>
				<div class="span1 offset1">
					<%= f.input :homeq2, label: "Q2 Score", input_html: { style: "width: 50px" } %>
				</div>
				<div class="span1 offset1">
					<%= f.input :homeq3, label: "Q3 Score", input_html: { style: "width: 50px" }%>
				</div>
				<div class="span1 offset1">
					<%= f.input :homeq4, label: "Q4 Score", input_html: { style: "width: 50px" } %>
				</div>
			</div>
			<p>
			<div class="row">
				<div class="span4">
					<h4><%= @team.team_name %>: <%= @gameschedule.homeq1 + @gameschedule.homeq2 + @gameschedule.homeq3 + @gameschedule.homeq4 %></h4>
				</div>
			</div>
			<p>
			<div class="row">
				<div class="span1">
					<%= f.input :opponentq1, label: "Q1 Score", input_html: { style: "width: 50px" } %>
				</div>
				<div class="span1 offset1">
					<%= f.input :opponentq2, label: "Q2 Score", input_html: { style: "width: 50px" } %>
				</div>
				<div class="span1 offset1">
					<%= f.input :opponentq3, label: "Q3 Score", input_html: { style: "width: 50px" }%>
				</div>
				<div class="span1 offset1">
					<%= f.input :opponentq4, label: "Q4 Score", input_html: { style: "width: 50px" } %>
				</div>
			</div>
			<p>
			<% if !@gameschedule.opponent.nil? %>
				<div class="row">
					<div class="span4">
						<h4><%= @gameschedule.opponent %>: <%= @gameschedule.opponentq1 + @gameschedule.opponentq2 + @gameschedule.opponentq3 + 
								@gameschedule.opponentq4 %></h4>
					</div>
				</div>
			<% end %>
			<p>
			<div class="row">
				<div class="span2">
					<%= f.input :firstdowns, label: "First Downs:", input_html: { style: "width: 50px" } %>
				</div>
				<div class="span2">
					<%= f.input :penalty, label: "Number of Penalties:", input_html: { style: "width: 50px" } %>
				</div>
				<div class="span2">
					<%= f.input :penaltyyards, label: "Penalty Yards:", input_html: { style: "width: 50px" } %>
				</div>
			</div>
			<p>
			<div class="span1 offset3">
				<%= f.button :submit, "Submit", class: "btn btn-medium btn-primary" %>
			</div>
		<% end %>	
	</div>	
</div>
