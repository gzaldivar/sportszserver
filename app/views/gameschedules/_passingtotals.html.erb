<ul class="nav nav-pills">
    <li><%= link_to "Passing", "#", :class => 'passing_stats' %></li>
    <li><%= link_to "Rushing", "#", :class => 'rushing_stats' %></li>
    <li><%= link_to "Receiving", "#", :class => 'receiving_stats' %></li>
</ul>
<table class="table table-striped table-bordered table-hover">
    <thead>
    	<th>Name</th>
    	<th>CMP</th>
    	<th>ATT</th>
    	<th>YDS</th>
    	<th>AVG</th>
    	<th>TD</th>
    	<th>INT</th>
    </thead>
    <tbody>
    	<% passstats.each do |p| %>
    		<% if isPasser?(p) %>
		    	<tr>
		    		<td><%= link_to Athlete.find(p.athlete_id).logname, sport_athlete_path(@sport, p.athlete_id) %></td>
		    		<td><%= p.completions %></td>
		    		<td><%= p.attempts %></td>
		    		<td><%= p.yards %></td>
		    		<td><%= number_with_precision(p.compaverage, precision: 2) %></td>
		    		<td><%= p.td %></td>
		    		<td><%= p.interceptions %></td>
		    	</tr>
		    <% end %>
    	<% end %>
    	<tr>
    		<td>Totals</td>
            <td><%= passingtotals.completions %></td>
            <td><%= passingtotals.attempts %></td>
            <td><%= passingtotals.yards %></td>
            <td><%= number_with_precision(passingtotals.compaverage, precision: 2) %></td>
            <td><%= passingtotals.td %></td>
            <td><%= passingtotals.interceptions %></td>
    	</tr>
    </tbody>
</table>
