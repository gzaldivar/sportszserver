<div class="row">
	<div class="col-xs-1">
		<%= f.label "Q1 Score" %>
		<%= f.text_field :homeq1, class: 'form-control' %>
	</div>
	<div class="col-xs-1 col-xs-offset-1">
		<%= f.label "Q2 Score" %>
		<%= f.text_field :homeq2, class: 'form-control' %>
	</div>
	<div class="col-xs-1 col-xs-offset-1">
		<%= f.label "Q3 Score" %>
		<%= f.text_field :homeq3, class: 'form-control' %>
	</div>
	<div class="col-xs-1 col-xs-offset-1">
		<%= f.label "Q4 Score" %>
		<%= f.text_field :homeq4, class: 'form-control' %>
	</div>
	<div class="col-xs-2 col-xs-offset-1">
		<h4><%= @team.mascot %> : <%= @gameschedule.homeq1 + @gameschedule.homeq2 + @gameschedule.homeq3 + @gameschedule.homeq4 %></h4>
	</div>
</div>
<p>
<p class="text-warning">You should enter opponent score here. This is not comupted automatically from stats.</p>
<div class="row">
	<div class="col-xs-1">
		<%= f.label "Q1 Score" %>
		<%= f.text_field :opponentq1, class: 'form-control' %>
	</div>
	<div class="col-xs-1 col-xs-offset-1">
		<%= f.label "Q2 Score" %>
		<%= f.text_field :opponentq2, class: 'form-control' %>
	</div>
	<div class="col-xs-1 col-xs-offset-1">
		<%= f.label "Q3 Score" %>
		<%= f.text_field :opponentq3, class: 'form-control' %>
	</div>
	<div class="col-xs-1 col-xs-offset-1">
		<%= f.label "Q4 Score" %>
		<%= f.text_field :opponentq4, class: 'form-control' %>
	</div>
	<div class="col-xs-2 col-xs-offset-1">
		<h4><%= @gameschedule.opponent_mascot %>: <%= @gameschedule.opponentq1 + @gameschedule.opponentq2 + @gameschedule.opponentq3 + 
				@gameschedule.opponentq4 %></h4>
	</div>
</div>
