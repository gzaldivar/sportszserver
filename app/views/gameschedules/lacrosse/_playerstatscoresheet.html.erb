<table class="table table-striped table-bordered table-hover">
	<thead>
		<th> Period <%= period %></th>
	</thead>
	<tbody>
		<% stats.each_with_index do |stat, cnt| %>
			<% if statname == "Ground Ball" %>
				<% if stat.ground_ball > 0 %>
					<tr>
						<% if team == lacrosse_home_team %>
							<td><%= link_to Athlete.find(stat.lacrosstat.athlete_id).number.to_s + " - " + stat.ground_ball.to_s, "#",
											data: {toggle: "modal", target: "#groundballmodal" + stat.id.to_s } %></td>
							<%= render 'gameschedules/lacrosse/playerstatmodal', modalid: 'groundballmodal' + stat.id.to_s, home: team, 
										playerstat: stat, players: nil, statname: statname %>
						<% else %>
							<td><%= link_to VisitorRoster.find(stat.lacrosstat.visitor_roster).number.to_s + " - " + stat.ground_ball.to_s, "#",
											data: {toggle: "modal", target: "#groundballmodal" + stat.id.to_s } %></td>
							<%= render 'gameschedules/lacrosse/playerstatmodal', modalid: 'groundballmodal' + stat.id.to_s, home: team, 
										playerstat: stat, players: nil, statname: statname %>
						<% end %>
					</tr>
				<% else %>
					<tr>
						<td></td>
					</tr>
				<% end %>
			<% elsif statname == "Face Off" %>
				<% if faceoff = lacrosse_face_off(stat.face_off_won, stat.face_off_lost) %>
					<tr>
						<% if team == lacrosse_home_team %>
							<td><%= link_to Athlete.find(stat.lacrosstat.athlete_id).number.to_s + "   " + faceoff, "#",
											data: {toggle: "modal", target: "#faceoffmodal" + stat.id.to_s } %></td>
							<%= render 'gameschedules/lacrosse/playerstatmodal', modalid: 'faceoffmodal' + stat.id, home: team, 
										playerstat: stat, players: nil, statname: statname %>
						<% else %>
							<td><%= link_to VisitorRoster.find(stat.lacrosstat.visitor_roster).number.to_s + "   " + faceoff, "#",
											data: {toggle: "modal", target: "#faceoffmodal" + stat.id.to_s } %></td>
							<%= render 'gameschedules/lacrosse/playerstatmodal', modalid: 'faceoffmodal' + stat.id, home: team, 
										playerstat: stat, players: nil, statname: statname %>
						<% end %>
					</tr>
				<% end %>
			<% elsif statname == "Steals" %>
				<% if stat.period == period and stat.steals > 0 %>
					<tr>
						<% if team == lacrosse_home_team %>
							<td><%= link_to Athlete.find(stat.lacrosstat.athlete_id).number.to_s + " - " + stat.steals.to_s, "#",
											data: {toggle: "modal", target: "#stealsmodal" + stat.id.to_s } %></td>
							<%= render 'gameschedules/lacrosse/playerstatmodal', modalid: 'stealsmodal' + stat.id, home: team, 
										playerstat: stat, players: nil, statname: statname %>
						<% else %>
							<td><%= link_to VisitorRoster.find(stat.lacrosstat.visitor_roster).number.to_s + " - " + stat.steals.to_s, "#",
											data: {toggle: "modal", target: "#stealsmodal" + stat.id.to_s } %></td>
							<%= render 'gameschedules/lacrosse/playerstatmodal', modalid: 'stealsmodal' + stat.id, home: team, 
										playerstat: stat, players: nil, statname: statname %>
						<% end %>
					</tr>
				<% end %>
			<% elsif statname == "Turnovers" %>
				<% if stat.period == period and stat.turnover > 0 %>
					<tr>
						<% if team == lacrosse_home_team %>
							<td><%= link_to Athlete.find(stat.lacrosstat.athlete_id).number.to_s + " - " + stat.turnover.to_s, "#",
											data: {toggle: "modal", target: "#turnoversmodal" + stat.id.to_s } %></td>
							<%= render 'gameschedules/lacrosse/playerstatmodal', modalid: 'turnoversmodal' + stat.id, home: team, 
										playerstat: stat, players: nil, statname: statname %>
						<% else %>
							<td><%= link_to VisitorRoster.find(stat.lacrosstat.visitor_roster).number.to_s + " - " + stat.turnover.to_s, "#",
											data: {toggle: "modal", target: "#turnoversmodal" + stat.id.to_s } %></td>
							<%= render 'gameschedules/lacrosse/playerstatmodal', modalid: 'turnoversmodal' + stat.id, home: team, 
										playerstat: stat, players: nil, statname: statname %>
						<% end %>
					</tr>
				<% end %>
			<% end %>
		<% end %>
	</tbody>
</table>
