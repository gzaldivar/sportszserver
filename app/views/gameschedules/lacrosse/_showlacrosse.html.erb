<div class="row">
	<div class="col-xs-8">
		<%if site_owner?(@sport) or isTeamManager?(@gameschedule) %>
			<ul class="nav nav-pills">
				<li><%= link_to "Update Scoreboard", "#" %></li>
			</ul>
		<% end %>
		<div class="well">
			<h3 class="text-center">
			<div class="row">
				<div class="col-xs-2">
					<%= image_tag get_tiny_team_logo(@sport, @team) %>
				</div>
				<div class="col-xs-1">
					<%= @team.mascot %>
				</div>
				<div class="col-xs-3">
				</div>
				<div class="col-xs-1">
					<%= @gameschedule.opponent_mascot %>
				</div>
				<div class="col-xs-2 col-xs-offset-1">
					<%= image_tag opponentimage(@gameschedule) %>
					<% if site_owner?(@sport) or isTeamManager?(@gameschedule) %>
						<%= render 'uploadopponent' %>
					<% end %>
				</div>
			</div>
			</h3>
			<h1 class="text-danger text-center">
			<div class="row">
				<div class="col-xs-2 col-xs-offset-1">
					<%= @gameschedule.EditHomeScore ? @gameschedule.homescore : 0 %>
				</div>
				<div class="col-xs-3">
					<h1 class="text-warning text-center">
						<%= @gameschedule.current_game_time %>
					</h1>
				</div>
				<div class="col-xs-2 col-xs-offset-1">
					<%= @gameschedule.opponentscore %>
				</div>
			</div>
			</font></h1>
			<h4 class="text-center">
			<div class="row">
				<div class="col-xs-1">
					Shots
				</div>
				<div class="col-xs-1">
					C/K
				</div>
				<div class="col-xs-1">
					Saves
				</div>
				<div class="col-xs-1 col-xs-offset-1">
					Period
				</div>
				<div class="col-xs-1 col-xs-offset-1">
					Shots
				</div>
				<div class="col-xs-1">
					C/K
				</div>
				<div class="col-xs-1">
					Saves
				</div>
			</div>
			</h4>
			<h4 class="text-danger text-center">
			<div class="row">
				<div class="col-xs-1">
					<%=  %>
				</div>
				<div class="col-xs-1">
					<%= %>
				</div>
				<div class="col-xs-1">
					<%= %>
				</div>
				<div class="col-xs-1 col-xs-offset-1">
					<%= @gameschedule.currentperiod %>
				</div>
				<div class="col-xs-1 col-xs-offset-1">
					<%=  %>
				</div>
				<div class="col-xs-1">
					<%=  %>
				</div>
				<div class="col-xs-1">
					<%=  %>
				</div>
			</div>
			</font>
			</h4>
		</div>
	</div>
	<div class="col-xs-3">
		<h4>Game Score Log</h4>
		<table class="table-striped table-bordered table-hover">
			<thead>
				<th>Period</th>
				<th>Player</th>

				<% if site_owner?(@sport) or isTeamManager?(@gameschedule) %>
					<th>Edit</th>
					<th>Delete</th>
				<% end %>
			</thead>
			<tbody>
				<% @gamelogs.each do |g| %>
					<td><%= g.period %></td>
					<td><%= g.logentrytext %></td>
					
				 	<% if site_owner?(@sport) or isTeamManager?(@gameschedule) %>
				 		<td><%= link_to "Edit", edit_sport_team_gameschedule_gamelog_path(@sport, @team, @gameschedule, g), 
				 					class: "btn btn-xs btn-warning" %></td>
				 		<td><%= link_to "Delete", [@sport, @team, @gameschedule, g], method: :delete,
				 					class: "btn btn-xs btn-danger", data: { confirm: "You sure?" } %></td>
				 	<% end %>
				<% end %>
			</tbody>
		</table>
	</div>
</div>
<div class="row">
	<div class="col-xs-11">
		<table class="table table-striped table-bordered table-hover">
			<thead>
				<th>Last Play:</th>
			</thead>
			<tbody>
				<td><%= @gameschedule.lastplay %></td>
			</tbody>
		</table>
	</div>
</div>
<%= render 'layouts/messagemodal', modalid: 'upgradestatsmodal', modaltitle: 'Upgrade for Stats', 
            messagetext: 'Click on "Manage Game Tracker Package" in Tools menu to upgrade!' %>

