<div class="row">
	<div class="col-xs-11">
		<%if site_owner?(@sport) or isTeamManager?(@gameschedule) %>
			<ul class="nav nav-pills">
				<li><%= link_to "Update Scoreboard", "#" %></li>
			</ul>
		<% end %>
		<div class="well">
			<h3 class="text-center">
			<div class="row">
				<div class="col-xs-2">
					<%= image_tag get_tiny_team_logo(@sport, @team) %>
				</div>
				<div class="col-xs-2">
					<%= @team.mascot %>
				</div>
				<div class="col-xs-2 col-xs-offset-1">
					<h1 class="text-warning text-center">
						<%= @gameschedule.current_game_time %>
					</h1>
				</div>
				<div class="col-xs-2">
					<%= @gameschedule.opponent_mascot %>
				</div>
				<div class="col-xs-2 col-xs-offset-1">
					<%= image_tag opponentimage(@gameschedule) %>
					<% if site_owner?(@sport) or isTeamManager?(@gameschedule) %>
						<%= render 'uploadopponent' %>
					<% end %>
				</div>
			</div>
			</h3>
			<div class="row">
				<div class="col-xs-2">
					<h1 class="text-danger text-center"><%= @gameschedule.EditHomeScore ? @gameschedule.homescore : 0 %></h1>
				</div>
				<div class="col-xs-2 col-xs-offset-2">
					<h3>Period</h3>
				</div>
				<div class="col-xs-1">
					<h2 class="text-danger text-center"><%= @gameschedule.currentperiod %></h3>
				</div>
				<div class="col-xs-2 col-xs-offset-3">
					<h1 class="text-danger text-center"><%= @gameschedule.opponentscore %></h1>
				</div>
			</div>
			</font>
			<p>
			<div class="row">
				<div class="col-xs-4">
					<table class="table table-striped table-bordered table-hover">
						<thead>
							<th>Player</th>
							<th>Penalty</th>

							<% if isAdmin? %>
								<th><%= link_to "Add", "#", class: "btn btn-xs btn-primary" %></th>
							<% end %>

						</thead>
						<tbody>
							<% if !@homepenalties.nil? %>
								<% @homepenalties.each do |key, value| %>
									<td><%= key %></td>
									<td><%= value %></td>

									<% if isAdmin? %>
										<td><%= link_to "Delete", "#", class: "btn btn-xs btn-primary" %></td>
									<% end %>

								<% end %>
							<% end %>
						</tbody>
					</table>
				</div>
				<div class="col-xs-3">
				</div>
				<div class="col-xs-4">
					<table class="table table-striped table-bordered table-hover">
						<thead>
							<th>Player</th>
							<th>Penalty</th>

							<% if isAdmin? %>
								<th><%= link_to "Add", "#", class: "btn btn-xs btn-primary" %></th>
							<% end %>

						</thead>
						<tbody>
							<% if !@visitorpenalties.nil? %>
								<% @visitorpenalties.each do |key, value| %>
									<td><%= key %></td>
									<td><%= value %></td>

									<% if isAdmin? %>
										<td><%= link_to "Delete", "#", class: "btn btn-xs btn-primary" %></td>
									<% end %>

								<% end %>
							<% end %>
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>
<div class="row">
	<div class="col-xs-4">
		<h4>Game Summary</h4>
		<table class="table-striped table-bordered table-hover">
			<% for i in 0 .. 1 %>
				<thead>
					<th><%= i == 0 ? "Home" : "Visitors" %></th>
					<th>1</th>
					<th>2</th>
					<th>3</th>
					<th>4</th>
					<th>OT</th>
					<th>Total</th>
				</thead>
				<tbody>
					<td><%= i == 0 ? @team.mascot : @gameschedule.opponent_mascot %></td>
					<% if i == 0 %>
						<td><%= @homescores[0] %></td>
						<td><%= @homescores[1] %></td>
						<td><%= @homescores[2] %></td>
						<td><%= @homescores[3] %></td>
						<td><%= @homescores[4] %></td>
						<td><%= @homescores.inject{|sum,x| sum + x } %></td>
					<% else %>
						<td><%= @visitorscores[0] %></td>
						<td><%= @visitorscores[1] %></td>
						<td><%= @visitorscores[2] %></td>
						<td><%= @visitorscores[3] %></td>
						<td><%= @visitorscores[4] %></td>
						<td><%= @visitorscores.inject{|sum,x| sum + x } %></td>
					<% end %>
				</tbody>
			<% end %>
		</table>
	</div>
	<div class="col-xs-5">
		<h4>Game Score Log</h4>
		<table class="table-striped table-bordered table-hover">
			<thead>
				<th>Period</th>
				<th>Player</th>

				<% if site_owner?(@sport) or isTeamManager?(@gameschedule) %>
					<th>Edit</th>
					<th>Delete</th>
				<% end %>
			</thead>
			<tbody>
				<% @gamelogs.each do |g| %>
					<td><%= g.period %></td>
					<td><%= g.logentrytext %></td>
					
				 	<% if site_owner?(@sport) or isTeamManager?(@gameschedule) %>
				 		<td><%= link_to "Edit", edit_sport_team_gameschedule_gamelog_path(@sport, @team, @gameschedule, g), 
				 					class: "btn btn-xs btn-warning" %></td>
				 		<td><%= link_to "Delete", [@sport, @team, @gameschedule, g], method: :delete,
				 					class: "btn btn-xs btn-danger", data: { confirm: "You sure?" } %></td>
				 	<% end %>
				<% end %>
			</tbody>
		</table>
	</div>
	<% if user_signed_in? and isAdmin? %>
		<div class="col-xs-2">
			<div class="row">
				<%= link_to "Scoresheet", "", class: "btn btn-md btn-primary" %>
			</div>
			<p>
			<div class="row">
				<%= link_to "Ad Visiting Team", "", class: "btn btn-md btn-primary" %>
			</div>
		</div>
	<% end %>
</div>
<p>
<div class="row">
	<div class="col-xs-11">
		<table class="table table-striped table-bordered table-hover">
			<thead>
				<th>Last Play:</th>
			</thead>
			<tbody>
				<td><%= @gameschedule.lastplay %></td>
			</tbody>
		</table>
	</div>
</div>
<div class="row">
	<div class="col-xs-11">
		<h4 class="text-info"><%= @team.mascot + " Statistics" %></h4>
		<%= render 'lacrosses/lacrossestats', name: "Player", anobject: @gameschedule, playerstats: @playerstats %>
		<p>
		<%= render 'lacrosses/lacrossestats', name: "", anobject: nil, playerstats: @homeplayertotals %>
		<p>
		<h4 class="text-info"><%= @gameschedule.opponent_mascot + " Statistics" %></h4>
		<%= render 'lacrosses/lacrossestats', name: "Player", anobject: @gameschedule, playerstats: @visitorstats %>
	</div>
</div>
<%= render 'layouts/messagemodal', modalid: 'upgradestatsmodal', modaltitle: 'Upgrade for Stats', 
            messagetext: 'Click on "Manage Game Tracker Package" in Tools menu to upgrade!' %>

