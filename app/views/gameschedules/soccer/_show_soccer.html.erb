<div class="row">
	<div class="col-xs-11">
		<%if site_owner? or isTeamManager?(@gameschedule) %>
			<ul class="nav nav-pills">
				<li><%= link_to "Update Scoreboard", soccerform_sport_team_gameschedule_path(@sport, @team, @gameschedule) %></li>
			</ul>
		<% end %>
		<div class="well">
			<h3 class="text-center">
			<div class="row">
				<div class="col-xs-2">
					<%= image_tag get_tiny_team_logo(@sport, @team) %>
				</div>
				<div class="col-xs-1">
					<%= @team.mascot %>
				</div>
				<div class="col-xs-3">
				</div>
				<div class="col-xs-1">
					<%= @gameschedule.opponent_mascot %>
				</div>
				<div class="col-xs-2 col-xs-offset-1">
					<%= image_tag opponentimage(@gameschedule) %>
					<% if site_owner? or isTeamManager?(@gameschedule) %>
						<%= render 'uploadopponent' %>
					<% end %>
				</div>
			</div>
			</h3>
			<h1 class="text-danger text-center">
			<div class="row">
				<div class="col-xs-2 col-xs-offset-1">
					<%= soccer_home_score(@sport, @gameschedule) %>
				</div>
				<div class="col-xs-3">
				</div>
				<div class="col-xs-2 col-xs-offset-1">
					<%= @gameschedule.opponentscore %>
				</div>
			</div>
			</font></h1>
			<h4 class="text-center">
			<div class="row">
				<div class="col-xs-1">
					Shots
				</div>
				<div class="col-xs-1">
					C/K
				</div>
				<div class="col-xs-1">
					Saves
				</div>
				<div class="col-xs-1 col-xs-offset-1">
					Period
				</div>
				<div class="col-xs-1 col-xs-offset-1">
					Shots
				</div>
				<div class="col-xs-1">
					C/K
				</div>
				<div class="col-xs-1">
					Saves
				</div>
			</div>
			</h4>
			<h4 class="text-danger text-center">
			<div class="row">
				<div class="col-xs-1">
					<%= @totals.shotstaken %>
				</div>
				<div class="col-xs-1">
					<%= @totals.cornerkick %>
				</div>
				<div class="col-xs-1">
					<%= @totals.goalssaved %>
				</div>
				<div class="col-xs-1 col-xs-offset-1">
					<%= @gameschedule.currentperiod %>
				</div>
				<div class="col-xs-1 col-xs-offset-1">
					<%= @gameschedule.socceroppsog %>
				</div>
				<div class="col-xs-1">
					<%= @gameschedule.socceroppck %>
				</div>
				<div class="col-xs-1">
					<%= @gameschedule.socceroppsaves %>
				</div>
			</div>
			</font>
			</h4>
		</div>
	</div>
</div>
<div class="row">
	<div class="col-xs-11">
		<% if is_package_enabled?(@sport) or current_user.godmode %>
			<h4>Goalie Stats</h4>
			<h4>Stats for game <%= @gameschedule.game_name %></h4>
			<table class="table table-striped table-bordered table-hover">
				<%= render "soccers/goalieheader", name: "Player" %>
				<% @goalies.each do |a| %>
					<% @thestat = nil %>
					<% @stats.each do |b| %>
						<% if a.id.to_s == b.athlete_id.to_s %>
							<% @thestat = b %>
							<% break %>
						<% end %>
					<% end %>
					<% if @thestat and is_soccer_goalie?(a.position) %>
						<%= render "soccers/goaliebody", stat: @thestat, name: "Player" %>
					<% elsif is_soccer_goalie?(a.position) %>
						<%= render "soccers/goaliebody", stat: Soccer.new(gameschedule: @gameschedule.id, athlete: a.id), name: "Player" %>
					<% end %>
				<% end %>
				<%= render "soccers/goaliebody", stat: @totals, name: "Totals" %>
			</table>
		<% elsif !is_package_enabled?(@sport) and site_owner? %>
			<h4><%= link_to "Goalie Stats", "#upgradestatsmodal", data: { toggle: "modal" } %></h4>
		<% end %>
	</div>
</div>
<div class="row">
	<div class="col-xs-11">
		<% if is_package_enabled?(@sport) or current_user.godmode %>
			<h4>Player Stats</h4>
			<table class="table table-striped table-bordered table-hover">
				<%= render "soccers/playerstatsheader", name: "Player" %>
				<% @players.each do |a| %>
					<% @thestat = nil %>
					<% @stats.each do |b| %>
						<% if a.id.to_s == b.athlete_id.to_s %>
							<% @thestat = b %>
							<% break %>
						<% end %>
					<% end %>
					<% if @thestat and hasSoccerPlayerStats?(@thestat) %>
						<%= render "soccers/playerstatsbody", stat: @thestat, name: "Player" %>
					<% else %>
						<%= render "soccers/playerstatsbody", stat: Soccer.new(gameschedule: @gameschedule.id, athlete: a.id), name: "Player" %>
					<% end %>
				<% end %>
				<%= render 'soccers/playerstatsbody', stat: @totals, name: "Totals" %>
			</table>
		<% elsif !is_package_enabled?(@sport) and site_owner? %>
			<h4><%= link_to "Player Stats", "#upgradestatsmodal", data: { toggle: "modal" } %></h4>
		<% end %>
	</div>
</div>
<%= render 'layouts/messagemodal', modalid: 'upgradestatsmodal', modaltitle: 'Upgrade for Stats', 
            messagetext: 'Click on "Manage Eazesportz Package" in Tools menu to upgrade!' %>

