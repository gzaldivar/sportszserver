<header class="navbar navbar-default navbar-fixed-top" role="navigation">
	<div class="container">
	  	<div class="navbar-header">
	       <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".nav-collapse">
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>
	      </button>
	      <% if current_site? %>
	      	<a class="navbar-brand" href=<%= "/sports/" + current_site.id %>><%= current_site.sitename %></a>      	
	      <% else %>
			<a class="navbar-brand" href="/">Eazesportz.com</a>      
	      <% end %>
	  	</div>
	  	<div class="navbar-header navbar-left">
			<nav class="collapse navbar-collapse">
	      		<ul class="nav navbar-nav">
					<% if current_team? %>
						<li><a href="#moreselect-responsive" data-toggle="modal">More</a></li>
					<% elsif !current_site? %>
						<li><a href="#oursolutions-responsive" data-toggle="modal">Sport Solutions</a></li>
					<% end %>
					<% if current_site? %>
						<li><%= link_to "Contact", sport_contacts_path(current_site) %></li>
					<% else %>
						<li><%= link_to "Contact", contacts_path %></li>
					<% end %>
					<li><%= link_to "Find Sport", sports_path if (!user_signed_in? and current_site?) or !current_site? %></li>
					<% if user_signed_in? and current_site? and site_owner?(current_site) %>
						<li><a href="#adsponsor-responsive" data-toggle="modal">Ads and Sponsors</a></li>
						<li><a href="#toolselect-responsive" data-toggle="modal">Tools</a></li>
