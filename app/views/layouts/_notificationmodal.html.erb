<div class-"row">
  <div class="col-xs-6">
    <div id="<%= modalname %>" class="modal fade" tabindex="-1" data-width="760" style="display: none;">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
        <h4 class="modal-title">Post Notification/Alert</h4>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-xs-6">
            <%= form_tag url_path, class: "form-horizontal", method: 'put' do  %>
            <div class="row">
              <div class="col-xs-4">
                <%= label_tag "Notification Message:" %>
              </div>
              <div class="col-xs-8">
                <%= text_field_tag "message", "", class: "form-control" %>
              </div>
            </div>
            <p>
            <div class="row">
              <div class="col-xs-2 col-xs-offset-4">
                <%= submit_tag "Submit", class: 'form-control' %>
              </div>
            </div>
            <% end %>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <div class="col-xs-1">
          <button type="button" data-dismiss="modal" class="btn btn-default">Close</button>
        </div>
      </div>
    </div>
  </div>
</div>
