<% if current_site? %>
  <!--% if current_site.sponsors.where(sponsorlevel: "Platinum").any? %-->
    <div class="row">
      <div class="col-xs-11">        
        <div class="panel panel-primary">
          <div class="panel-heading">
              <h4 class="panel-title"><%= current_site.sitename %> Sponsors</h4>
           </div>
        </div>
      </div>
    </div>
    <div class="row">
      <% if @athlete %>
        <% sponsor = getPlayerAd(current_site, @athlete)
           if sponsor.nil?
              sponsor = getsponsor(current_site)
            end %>
      <% else %>
        <% sponsor = getsponsor(current_site) %>
      <% end %>
      <% if !sponsor.nil? and sponsor.sponsorpic? %>
          <div class="col-xs-3 col-xs-offset-1">
              <%= link_to (image_tag sponsor.sponsorpic.url(:thumb), class: 'img-responsive'), sponsor.adurl %></td>
          </div>
       <% end %>
      <% if !sponsor.nil? and sponsor.sponsorpic? %>
          <div class="col-xs-3">
              <%= link_to (image_tag sponsor.sponsorpic.url(:thumb), class: 'img-responsive'), sponsor.adurl %></td>
          </div>
       <% end %>
      <% if !sponsor.nil? and sponsor.sponsorpic? %>
          <div class="col-xs-3">
              <%= link_to (image_tag sponsor.sponsorpic.url(:thumb), class: 'img-responsive'), sponsor.adurl %></td>
          </div>
       <% end %>
    </div>  <!--% end %-->
<% end %>