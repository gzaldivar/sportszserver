<div class-"row">
  <div class="col-xs-4">
    <div id="toolselect-responsive" class="modal fade" tabindex="-1" data-width="760" style="display: none;">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
        <h4 class="modal-title">More ....</h4>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="well">
            <div class="col-xs-6">
              <table class="table table-striped table-bordered table-hover">
                <thead>
                  <th>Admin Tools</th>
                </thead>
                <tbody>
                    <tr>
                      <td><%= link_to "Manage Players", sport_athletes_path(current_site) %></td>
                    </tr>
                    <tr>
                      <td><%= link_to "Manage Coaches", sport_coaches_path(current_site) %></td>
                    </tr>
                    <tr>
                      <td><%= link_to "Manage Users", users_path(site: current_site) %></td>
                    </tr>
                     <tr>
                      <td><%= link_to "Manage Sponsors", sport_sponsors_path(current_site) %></td>
                    </tr>
                     <tr>
                      <% if payment = Payment.find_by(user_id: current_user.id) %>
                        <td><%= link_to "Manage Eazesportz Package ...", upgrade_payments_path(payment_id: payment) %></td>
                      <% else %>
                        <td><%= link_to "Manage Eazesportz Package ...", upgrade_payments_path %></td>
                      <% end %>
                    </tr>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <div class="col-xs-1">
          <button type="button" data-dismiss="modal" class="btn btn-default">Close</button>
      </div>
      </div>
    </div>
  </div>
</div>
