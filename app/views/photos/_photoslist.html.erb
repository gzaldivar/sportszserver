<table class="table table-striped table-bordered table-hover">
    <thead>
      <% if photoselect == true %>
        <th>Select</th>
        <th>Photo</th>
      <% end %>
    	<th>
        <% if featured == "Featured" %>
          Featured Photo
        <% else %>
          Photo Name
        <% end %>
        </th>
    </thead>
    <tbody>
	    <% if photolist.any? %>
	     <% photolist.each do |p| %>
		    	<tr>
            <% if photoselect == true %>
              <td><%= check_box_tag "photo_ids[]", p.id %></td>
              <td><%= image_tag p.thumbnail_url, { class: 'img-responsive', height: '100px', width: '100px' } %></td>
            <% end %>
		    		<td><%= link_to p.displayname, '#', :class => 'select_photo', :data => {:id => p.id.to_s} %></td>
		    	</tr>
		    <% end %>
        <% if photoselect == true %>
          <%= will_paginate photolist %>
        <% end %>
		  <% end %>
    </tbody>
</table>
<script>
  $(document).ready(function() {
    $('.featured_photos').click(function() {
      $('.modal').modal('hide');
      $.ajax({
        url: "<%= showfeaturedphotos_sport_photos_path %>",
        dataType: "script"
      });
    });
    $('.latest_photos').click(function() {
      $('.modal').modal('hide');
      $.ajax({
        url: "<%= latest_sport_photos_path %>",
        dataType: "script"
      });
    });
   });
</script>
