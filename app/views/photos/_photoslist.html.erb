<table class="table table-striped table-bordered table-hover">
    <thead>
    	<th>
        <% if featured == "Featured" %>
          Featured Photo
        <% else %>
          Photo Name
        <% end %>
        </th>
    </thead>
    <tbody>
	    <% if !photolist.nil? %>
	        <% photolist.each do |p| %>
		    	<tr>
		    		<td><%= link_to p.displayname, '#', :class => 'select_photo', :data => {:id => p.id.to_s} %></td>
		    	</tr>
		    <% end %>
		  <% end %>
    </tbody>
</table>
<script>
  $(document).ready(function() {
    $('.featured_photos').click(function() {
      $('.modal').modal('hide');
      $.ajax({
        url: "<%= showfeaturedphotos_sport_photos_path %>",
        dataType: "script"
      });
    });
    $('.latest_photos').click(function() {
      $('.modal').modal('hide');
      $.ajax({
        url: "<%= latest_sport_photos_path %>",
        dataType: "script"
      });
    });
   });
</script>
