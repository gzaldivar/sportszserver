<% provide(:title, current_site.sitename + " - " + @photo.displayname ) %>
<p>
<div class="row">   
  <div class="col-xs-11">
		<%= render 'shared/error_messages', object:	@photo %>
	</div>
</div>
<div class="row">
	<div class="col-xs-8">
    <% if !@photo.large_url.nil? %>
      <%= image_tag(@photo.large_url) %>
    <% elsif !@photo.original_url.nil?%>
      <%= image_tag(@photo.original_url) %>
    <% else %> 
      <%= image_tag 'Photo_Not_Available.jpg' %>
  	<% end %>
  </div>
</div><br/>
<div class="row">
	<div class="col-xs-6">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Photo Name</th>
          <th>Team</th>
          <th>Athletes</th>
          <th>Game</th>
          <% if @sport.name == "Football" %>
            <th>Play</th>
          <% end %>
          <th>Date</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= @photo.displayname %></td>
    		  <% if !@photo.teamid.nil? %>
              		<td><%= @sport.teams.find(@photo.teamid).team_name %></td>
    			<% else %>
    				<td></td>
    			<% end %>
          <% if !@photo.players.nil? and @photo.players.any? %>
            <td>
              <% @photo.players.each do |p| %>
              	<%= link_to Athlete.find(p).full_name, sport_athlete_path(@sport, p) %><p>
              <% end %>
            </td>
          <% else %>
            	<td></td>
          <% end %>
    		  <% if !@photo.gameschedule.nil? and !@photo.gameschedule.blank? %>
              		<td><%= @sport.teams.find(@photo.teamid).gameschedules.find(@photo.gameschedule).game_name %></td>
    		  <% else %>
    				<td></td>
    		  <% end %>
          <% if @sport.name == "Football" and !@photo.gamelog.nil? and !@photo.gamelog.blank? %>
                  <td><%= @sport.teams.find(@photo.teamid).gameschedules.find(@photo.gameschedule).gamelogs.find(@photo.gamelog).logentrytext %></td>
          <% else %>
            <td></td>
          <% end %>
          <td><%= @photo.updated_at.localtime.strftime("%m/%d/%Y") %></td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="col-xs-3 col-xs-offset-1">
    <h4>Photo Description:</h4><br/><p>
    <%= @photo.description %>
  </div>
</div>
<br/>
<div class="row">
  <div class="col-xs-2 col-xs-offset-5">
    <% if isAdmin? or (user_signed_in? and (current_user.id == @photo.user_id) and enable_user_pics? ) %>
      <%= link_to	"Edit Photo", edit_sport_photo_path(@sport, @photo), class:	"btn btn-sm btn-primary" %>
    <% end %>
  </div>
</div>
<p>
<div class="row">
  <%= render "layouts/sponsor" %>
</div>
