<div class="modal" id="<%= modalid %>">
	<div class="modal-dialog">
      	<div class="modal-content">
        	<div class="modal-header">
          		<button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
          		<h4 class="modal-title">Goalie Stats:  <%= athlete.numlogname %></h4>
        	</div>
        	<div class="modal-body">
            <div class="row">
              <div class="col-xs-12">
            		<%= form_for [@sport, @team, @gameschedule, @soccer_game, stat], class: "form-horizontal" do |f| %>
            			<%= f.hidden_field :home, value: home %>
                  <%= hidden_field_tag 'goalstat', 'goalstat' %>
                  <%= hidden_field_tag 'player_id', athlete.id %>

                  <div class="row">
                    <div class="col-xs-2">
                      <%= label_tag "Period" %>
                      <%= text_field_tag :period, @period, :readonly => true, class: 'form-control' %>
                    </div>
                    <div class="col-xs-2">
                      <%= label_tag 'Saves' %>
                      <%= text_field_tag 'saves', stat.soccer_goalstats.find_by(period: @period) ? 
                                            stat.goalstat.find_by(period: @period).saves : 0, class: 'form-control' %>
                    </div>
                    <div class="col-xs-2">
                        <%= label_tag 'Allowed' %>
                        <%= text_field_tag 'goals_allowed', stat.soccer_goalstats.find_by(period: @period) ? 
                                            stat.soccer_goalstats.find_by(period: @period).goals_allowed : 0, class: 'form-control' %>
                    </div>
                    <div class="col-xs-2">
                        <%= label_tag 'Minutes' %>
                        <%= text_field_tag 'minutesplayed', stat.soccer_goalstats.find_by(period: @period) ? 
                                            stat.soccer_goalstats.find_by(period: @period).minutesplayed : 0, class: 'form-control' %>
                    </div>
                  </div>

                  <p>
                  <div class="row">
                      <div class="col-xs-1 col-xs-offset-4">
                          <%= submit_tag "Submit", class: 'btn btn-primary' %>
                      </div>
                  </div>
                </div>
              </div>
            <% end %>
            </div>
            <div class="modal-footer">
                <a href="#" data-dismiss="modal" class="btn btn-default">Close</a>
            </div>
        </div>
    </div> 
</div>