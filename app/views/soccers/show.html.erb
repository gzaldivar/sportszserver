<% provide(:title, current_site.sitename + " " + @athlete.name + " - Soccer Stats") %>
<p>
<div class="row">
	<div class="col-xs-10">
		<div class="row">
			<div class="col-xs-2">
				<%= link_to image_tag(@athlete.pic.url(:thumb)), sport_athlete_path(@sport, @athlete) %>
			</div>
			<div class="col-xs-8">
				<h4>Stats for <%= link_to(@athlete.logname, [@sport, @athlete]) %> for game <%= link_to(@gameschedule.game_name, [@sport, @team, @gameschedule]) %></h4>
			</div>
		</div>
		<table class="table table-bordered">
			<% if hasSoccerPlayerStats?(@stats) %>
				<table class="table table-bordered">
					<%= render "playerstatsheader", name: "Game"%>
					<%= render "playerstatsbody", stat: @stats, name: "Game" %>
				</table>
			<% end %>
			<% if is_soccer_goalie?(@athlete.position) %>
				<table class="table table-bordered">
					<%= render "goalieheader", name: "Game"%>
					<%= render "goaliebody", stat: @stats, name: "Game" %>
				</table>
			<% end %>
		</table>
	</div>
</div>