<div class="row">
	<div class="col-xs-12">
		<%= form_for [@sport, @sponsor], :input_html => { :class => 'form-horizontal' } do |f| %>
			<%= render 'shared/error_messages', object: f.object %>
			<div class="row">
				<div class="col-xs-4">
					<%= f.label :sponsor_name %>
					<%= f.text_field :name, class: 'form-control' %>
				</div>
				<div class="col-xs-4 col-xs-offset-1">
					<%= f.label :number %>
					<%= f.text_field :addrnum, class: 'form-control' %>
				</div>
			</div>
			<div class="row">
				<div class="col-xs-4">
					<%= f.label :street %>
					<%= f.text_field :street, class: 'form-control' %>
				</div>
				<div class="col-xs-4 col-xs-offset-1">
					<%= f.label :city %>
					<%= f.text_field :city, class: 'form-control' %>
				</div>
			</div>
			<div class="row">
				<div class="col-xs-2">
					<%= f.label :state %>
					<%= f.select :state, us_states, {}, class: 'form-control' %>
				</div>
				<div class="col-xs-2 col-xs-offset-1">
					<%= f.label :zip %>
					<%= f.text_field :zip, class: 'form-control' %>
				</div>
				<div class="col-xs-2 col-xs-offset-1">
					<%= f.label :phone %>
					<%= f.text_field :phone, class: 'form-control' %>
				</div>
			</div>
			<div class="row">
				<div class="col-xs-2">
					<%= f.label :fax %>
					<%= f.text_field :fax, class: 'form-control' %>
				</div>
				<div class="col-xs-2 col-xs-offset-1">
					<%= f.label :mobile %>
					<%= f.text_field :mobile, class: 'form-control' %>
				</div>
			</div>
			<div class="row">
				<div class="col-xs-8">
					<%= f.label :ad_url %>
					<%= f.text_field :adurl, class: 'form-control' %>
				</div>
			</div>
	        <div id="loading">
	          <div id="loadingcontent">
	              <p id="loadingspinner">
	                  Updating Sponsor Info ....
	              </p>
	          </div>
	        </div>
			<div class="row">
				<div class="col-xs-4">
					<%= f.label :contact_email, "Contact Email" %>
					<%= f.text_field :contactemail, class: 'form-control' %>
				</div>
<%
=begin %>
				<div class="col-xs-3 col-xs-offset-2">
					<%= f.input :priority, as: :radio_buttons, label: "Sponsorship Priority:", hint: "Select if you want your sponorship ads to take prioirty over ads displayed from an ad server on your mobile app", :selected => (@sponsor.priority? ? true : false) %>
				</div>
<%
=end %>
			</div>
			<p>
			<div class="row">
				<div class="col-xs-3">
					<h4>Current sponser ad image</h4>
					<% if !@sponsor.sponsorpic.blank? %>
						<%= image_tag @sponsor.sponsorpic.url(:medium) %>
		          	<% elsif !@sponsor.sponsorpic.blank? %>
		            	<%= image_tag @sponsor.sponsorpic.url(:orignal) %>
		          	<% else %>
		            	<%= image_tag "Photo_Not_Available.jpg" %>
					<%end %>
					<%= f.label :sponsor_pic %>
					<%= f.file_field :sponsorpic, label: "Sponsor Ad Image:", hint:	"The ad will be processed so that it renders correctly on mobile platforms." %>
				</div>
				<div class="col-xs-2 col-xs-offset-1">
					<%= f.label :select_team, "Select Team" %>
					<%= collection_select(:sponsor, :team_id, @sport.teams, :id, :team_name, { prompt: true }, { class: 'form-control' } ) %>
				</div>
<%
=begin %>
				<div class="col-xs-2 col-xs-offset-1">
					<%= f.label :team_sponsor %>
					<%= f.check_box :teamonly, class: 'form-control' %>
				</div>
<%
=end %>
			</div>
			<div class="col-xs-2 col-xs-offset-4">
				<%= f.submit :submit, class:	"btn btn-sm btn-primary", id: "submitbtn" %>
			</div>
		<% end %>	
	</div>	
</div>
