<div class="row">
	<div class="col-xs-6">
    	<div id="sortsponsors-responsive" class="modal fade" tabindex="-1" data-width="760" style="display: none;">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
				<h4 class="modal-title">Search Blogs</h4>
			</div>
			<div class="modal-body">
				<div class="row">
					<div class="col-xs-12">
				    	<div class="well">
							<div class="row">
								<div class="col-xs-11">
							    	<%= form_tag sport_sponsors_path(@sport), class: "form-horizontal", method: 'get' do %>
									    <div class="row">
									        <div class="col-xs-2">
									          	<%= label_tag "Sort Ad Sponsors: " %>
									      		<%= select_tag "sortcriteria", options_for_select(["Ap Purchased", "Web Purchased", "All"]), 
									      						include_blank: true, class: 'form-control' %>
									      	</div>
									      	<div class="col-xs-2">
									          	<%= label_tag "Month: " %>
									      		<%= select_tag "month", options_for_select(months), include_blank: true, class: 'form-control' %>
									        </div>
									      	<div class="col-xs-1">
									          	<%= label_tag " Year: " %>
									      		<%= select_tag "year", options_for_select(2014 .. 2024), include_blank: true, class: 'form-control' %>
									        </div>
										</div>
										<p>
									    <div class="row">
									        <div class="col-xs-2 col-xs-offset-1">
									          <%= submit_tag  "Sort Sponsors", class: "btn btn-md btn-primary" %>
									        </div>
									    </div>
							    	<% end %>
							    </div>
							</div>
				    	</div>
				    </div>
				</div>
			</div>
			<div class="modal-footer">
				<div class="col-xs-1">
				<button type="button" data-dismiss="modal" class="btn btn-default">Close</button>
			</div>
    	</div>
	</div>
</div>