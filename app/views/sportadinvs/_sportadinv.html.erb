<div class="row">
	<div class="col-xs-6 col-xs-offset-2">
		<h5>Ad level Name: 
		<font class="text-info"><%= sportadinv.adlevelname %></font></h5>
		<h5>Price:&nbsp
		<font class="text-info"><%= sportadinv.price %></font></h5>
		<h5>Available for general sale to all advertisers: 
		<font class="text-info"><%= sportadinv.active %></font></h5>
		<h5>Player Advertisement 
		<font class="text-info"><%= sportadinv.playerad ? "True" : "False" %></font></h5>
		<h5>Expiration Date: 
		<font class="text-info"><%= sportadinv.expiration.strftime("%m/%d/%Y") %></font></h5>
		<p>
		<% if user_signed_in? and site_owner?(@sport) %>
			<div class="row">
				<div class="col-xs-1">
					<%= link_to "Edit", edit_sport_sportadinv_path(@sport, sportadinv), class: "btn btn-md btn-primary" %>
				</div>
				<div class="col-xs-2 col-xs-offset-1">
					<%= link_to "Delete", sport_sportadinv_path(@sport, sportadinv), method: :delete, class: "btn btn-md btn-danger",
								 data: { confirm: "You sure?" } %>
				</div>
			</div>
		<% end %>
	</div>
</div>