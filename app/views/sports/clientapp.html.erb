<% provide(:title, "Eazesportz - Email Confirmation Successful") %>
<p>
<div class="row">
	<div class="col-xs-4">
		<% if @client == "Football" %>
	  		<%= image_tag "FootballGameStats.png", class: 'img-responsive' %>
	  	<% elsif @client == "Basketball" %>
	  		<%= image_tag "BasketballGameStats.png", class: 'img-responsive' %>
	  	<% elsif @client == "Soccer" %>
	  		<%= image_tag "SoccerLiveStats.png", class: 'img-responsive' %>
	  	<% elsif @client == "Eazesportz" %>
	  		<%= image_tag "fanapp/EazeHomeScreen.png", class: 'img-responsive' %>
	  	<% end %>
	</div>
	<div class="col-xs-6 col-xs-offset-1">
		<h1 class="text-success">Welcome to Eazesportz!</h1>
		<h2 class="text-info">
		<% if @client == "Eazesportz" %>
			<% if @admin %>
				<%= link_to "Click here to open the app", "#{@clientapp}email/#{@email}/admin/admin" %>
			<% else %>
				<%= link_to "Click here to open the app", "#{@clientapp}email/#{@email}" %>
			<% end %>
		<% else %>
			<%= link_to "Click here to open the app", "#{@clientapp}email/#{@email}" %>
		<% end %>
		</h2>
	</div>
</div>
