		<div class="span2 offset1">
		  	<%= link_to "Football", info_path, class: "btn btn-medium btn-primary" %>
	    </div>
		<div class="span2 offset1">
		  	<%= link_to "Basketball", infobasketball_sports_path, class: "btn btn-medium btn-primary" %>
	    </div>
	</div>
	<div class="row">
	    <div class="span5">
			<h4>Already managing a program? Sign in above</h4>
		</div>
	</div>
<% end %>
<div class="row">
	<div class="span10">
		<% if user_signed_in? %>
			<% if !current_user.mysites.nil? %>
				List of sites you are registered for:&nbsp
				<% current_user.mysites.keys.each do |k| %>
					<%= link_to current_user.mysites[k], site_path(id: k) %>&nbsp
					<% if current_user.default_site == k %>
						<em>Default Site!</em>
					<% end %>
				<% end %>
			<% end %>
		<% end %>
	    <h4>If you are looking for another school or athletic program powered by Eazesportz.com, click below.</h4>
	  	<%= link_to "Search", sports_path, class: "btn btn-medium btn-primary" %>
	</div>
</div>
