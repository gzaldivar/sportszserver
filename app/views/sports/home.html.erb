<% provide(:title, "Easzesportz Mobile - Football and Basketball") %>
<p>
<!--font color="b3f10c"-->
<% if user_signed_in? %>
	<div class="row">
		<div class="span8 offset1">
			<h3>Welcome <%= current_user.name %></h3><p>
			<% if current_user.admin and @admin_sites.any? %>
				<% @admin_sites.each do |s| %>
					Administer:&nbsp
					<%= link_to s.sitename, sitechange_user_path(sport_id: s) %>&nbsp
					<% if current_user.default_site == s.id %>
						<h4><em>Current Default Site</em></h4>
					<% end %>
					<p>
					<%= link_to (image_tag s.banner.url(:medium)), s %>&nbsp
					<% if !(current_user.default_site == s.id) %>
						<%= link_to "Set Default", site_user_path(s), class: "btn btn-mini btn-primary" %>
					<% end %>
					<p>
				<% end %>
				<p>
			<% end %>
			<%= link_to "Create New Site", new_sport_path, class: "btn btn-medium btn-primary" %>
		</div>
	</div>
<% else %>
	<div class="row">
		<div class="span10">
			<h1>Welcome to Easy Sports Mobile!</h1>
			<p>
