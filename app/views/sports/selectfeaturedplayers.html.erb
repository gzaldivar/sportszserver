<% provide(:title, current_site.sitename + ' - Add Featured Players') %>
<p>
<div class="row">
	<div class="col-xs-6 col-xs-offset-3">
		<h4>Add or Remove Players - Featured List</h4>
	</div>
</div>
<div class="row">
	<div class="col-xs-12">
		<% if @players.nil? or @players.empty? %>
			<div class="modal fade">
					<div class="modal-dialog">
						<div class="modal-content">
							<div class="modal-header">
								<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
								<h4 class="modal-title">Notice</h4>
							</div>
							<div class="modal-body">
								<p>No players entered!</p>
							</div>
							<div class="modal-footer">
								<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
								<button type="button" class="btn btn-primary">Save changes</button>
							</div>
						</div>
					</div><!-- /.modal-content -->
				</div><!-- /.modal-dialog -->
			</div><!-- /.modal -->
		<% else %>
			<%= form_tag featuredplayers_sport_path(@sport), method: :put, class: 'form-horizontal'  do %>
				<% range = 0..@players.count %>
				<% range.step(2) do |cnt| %>
					<div class="row">
						<div class="col-xs-5">
			                <ul>
		                    	<li>
		                    		<%= check_box_tag "player_ids[]", @players[cnt].id %>
		                    		<%= @players[cnt].full_name %>
		                    	</li>
							</ul>
						</div>
						<div class="col-xs-5">
							<% if cnt + 1 < @players.count %>
			                	<ul>
			                    	<li>
			                    		<%= check_box_tag "player_ids[]", @players[cnt + 1].id %>
			                    		<%= @players[cnt + 1].full_name %>
			                    	</li>
								</ul>
							<% end %>
						</div>
					</div>
				<% end %>
	            <div class="row">
					<div class="col-xs-2 col-xs-offset-4">
						<%= submit_tag "Add Player", class: 'btn btn-md btn-primary' %>
					</div>
	            </div>
			<% end %>
		<% end %>
	</div>
</div>
