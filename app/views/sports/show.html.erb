<% provide(:title, current_site.sitename) %>
<div id="loadscripts">
    <%= render 'show.js' %>
</div>
<p>
<div class="row">
	<div class="col-xs-1">
    <div class="row">
      <p class="text-success">
      <% if user_signed_in? %>
        <em>Following Players</em>
      <% else %>
        <em>Sign in to Follow Players</em>
      <% end %>
      </p>
      <div class="followed table-responsive">
        <table class="table table-bordered">
          <thead>
            <th>No.</th>
            <th>Name</th>
  		      <th>Alerts</th>
          </thead>
          <% if !@followed.nil? and @followed.any? %>
            <% @followed.each do |f| %>
              <tbody>
                <td><%= link_to f.number, sport_athlete_path(@sport, f) %></td>
                <td><%= link_to f.lastname, sport_athlete_path(@sport, f) %></td>
                <% if hasAlerts?(f, current_user) %>
                  <td><%= link_to "Alerts", sport_athlete_alerts_path(@sport, f), class: "btn btn-xs btn-inverse" %></td>
                <% else %>
                  <td></td>
                <% end %>
              </tbody>
            <% end %>
          <% end %>
        </table>
      </div>
  	</div>
    <p>
    <div class="row">
        <table class="table table-bordered">
          <thead>
          </thead>
          <tbody>
            <td><% if !@sport.sport_logo? %>
              <%= image_tag 'Photo_Not_Available.jpg' %>
            <% else %>
              <%= image_tag @sport.sport_logo.url(:thumb), class: 'img-responsive' %>
            <% end %></td>
          </tbody>
        </table>
    </div>
  </div>
  <div class="col-xs-6 col-xs-offset-1">
    <div class="mainpills">
      <ul class="nav nav-pills">
        <li><a href="#">News</a></li>
        <li><a href="#photo-responsive" data-toggle="modal">Latest Photo's</a></li>
      </ul>
    </div>
    <div id="thenews">
        <%= render 'newsfeeds/newsfeed', newsfeed: @thenews %>
    </div>
  </div>
  <div class="col-xs-3">
    <div class="newspills">
      <ul class="nav nav-pills">
          <li><a href="#game-responsive" data-toggle="modal">Sort News</a></li>
          <li><%= link_to "All", '#', :class => 'all_news' %></li>
       </ul>
    </div>
    <div class="newsfeed table-responsive" id="thefeed">
      <%= render 'newsfeeds/newslist', newsfeeds: @newsfeeds %>
    </div>
  </div>
</div>
<p>
<% if site_owner? %>
  <div class="row">
    <div class="col-xs-2 col-xs-offset-4">
      <%= link_to "Edit Sport", edit_sport_path(id: @sport.id), class: "btn btn-xs btn-primary" %>
      <p>
      <% if @sport.teams.blank? %>
        <strong>No teams entered.</strong> Click Edit Sport to add teams!
      <% end %>
    </div>
    &nbsp
    <div class="col-xs-2">
      <%= link_to "Delete Sport", @sport,  method: :delete, class: "btn btn-xs btn-danger", 
              data: { confirm: "You sure? All data, photos, videos, schedules, etc. will be deleted. Do you want to edit or rename the sport?" } %>
    </div>
  </div>
<% end %>
<div class="row">
    <% if !(@sponsor = sponsorad(@sport)).nil? %>
        <div class="col-xs-14">
            <%= image_tag @sponsor.sponsorpic.url(:medium), class: 'img-responsive' %></td>
        </div>
     <% end %>
    <% if !(@sponsor = sponsorad(@sport)).nil? %>
        <div class="col-xs-14">
            <%= image_tag @sponsor.sponsorpic.url(:medium), class: 'img-responsive' %></td>
        </div>
     <% end %>
    <% if !(@sponsor = sponsorad(@sport)).nil? %>
        <div class="col-xs-14">
            <%= image_tag @sponsor.sponsorpic.url(:medium), class: 'img-responsive' %></td>
        </div>
     <% end %>
</div>
<div class-"row">
  <div class="col-xs-6">
    <div id="game-responsive" class="modal fade" tabindex="-1" data-width="760" style="display: none;">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h4 class="modal-title">Select Game</h4>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-md-6">
            <table class="table table-striped table-bordered table-hover">
              <thead>
                <th>Game</th>
              </thead>
              <tbody>
                <% if !@schedules.nil? %>
                  <% will_paginate @schedules %>
                  <% @schedules.each do |s| %>
                    <tr>
                      <td><%= link_to s.game_name, '#', :class => 'sort_news_schedules', :data => {:id => s.id.to_s} %></td>
                    </tr>
                  <% end %>
                <% end %>
              </tbody>
            </table>
          </div>
          <div class="col-md-6">
            <table class="table table-striped table-bordered table-hover">
              <thead>
                <th>Player</th>
              </thead>
              <tbody>
                <% if !@players.nil? %>
                  <% will_paginate @players %>
                  <% @players.each do |p| %>
                    <tr>
                      <td><%= link_to p.number.to_s + " " + p.logname, '#', :class => 'sort_news_players', :data => {:id => p.id.to_s} %></td>
                    </tr>
                  <% end %>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" data-dismiss="modal" class="btn btn-default">Close</button>
      </div>
    </div>
  </div>
</div>
<div class-"row">
  <div class="col-xs-4">
    <div id="photo-responsive" class="modal fade" tabindex="-1" data-width="760" style="display: none;">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h4 class="modal-title">Select Game</h4>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-md-4">
            <div class="well">
              <p class="text-info">Coming Soon!</p>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" data-dismiss="modal" class="btn btn-default">Close</button>
      </div>
    </div>
  </div>
</div>

