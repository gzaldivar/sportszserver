<div class="row">
  <div class="span8 offset2">
    Enter new team information:
    <%= simple_form_for [@sport, @team] do |t| %>
      <div class="row">
        <div class="span8">
          <%= t.input :title, hint: "Varsity, Freshman, Pee Wee ...." %>
        </div>
      </div>
      <p>
      <div class="row">
        <div class="span8">
          <% if current_site.mascot.blank? %>
            <h4><em><strong>No global site Mascot defined. You must enter one for the team.</strong></em></h4>
            <%= t.input :mascot, label: "Team Mascot", required: true %>
          <% else %>
            Use the site mascot?
            <%= t.input :mascot, label: "Team Mascot", required: true, input_html: { value: current_site.mascot } %>
          <% end %>
        </div>
      </div>
      <div class="row"> 
        <div class="span2">
          <% if !@team.team_logo.blank? %>
            <h4>Team Logo image</h4>
            <%= image_tag @team.team_logo.url(:thumb)%>
          <% else %>
              This is the site logo that will be used for this team. You can enter one for this team only. It will appear only on sport pages and will be used as the team logo in our mobile app.
              <% if current_site.logo.url.blank? %>
                <%= image_tag "NotAvailable.jpg" %>
              <% else %>
                <%= image_tag current_site.logo.url(:thumb) %>
              <%end %>
          <% end %>
          <%= t.file_field  :team_logo %>
        </div>
        <div id="loading">
          <div id="loadingcontent">
              <p id="loadingspinner">
                  Updating Sport...
              </p>
          </div>
        </div>
      </div>
      <p>
      <div class="row">
        <div class="span1 offset2">
          <%= t.button :submit, 'Submit', class:  "btn btn-medium btn-primary", id: "submitbtn" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
