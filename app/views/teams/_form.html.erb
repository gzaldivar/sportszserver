<div class="row">
  <div class="col-xs-6 col-xs-offset-2">
    Enter new team information:
    <%= form_for [@sport, @team], 
              :defaults => { :input_html => { :class => "form-control" } } do |t| %>
      <div class="row">
        <div class="col-xs-6">
          <h5>Varsity, Freshman, Pee Wee ....</h5>
          <%= t.label :title %>
          <%= t.text_field :title, class: 'form-control' %>
        </div>
      </div>
      <p>
      <div class="row">
        <div class="col-xs-6">
          <%= t.label :mascot %>
          <% if current_site.mascot.blank? %>
            <h4><em><strong>No global site Mascot defined. You must enter one for the team.</strong></em></h4>
            <%= t.text_field :mascot, class: 'form-control' %>
          <% else %>
            Use the site mascot?
            <%= t.text_field :mascot, value: current_site.mascot, class: 'form-control' %>
          <% end %>
        </div>
      </div>
      <div id="loading">
        <div id="loadingcontent">
            <p id="loadingspinner">
                Updating Sport...
            </p>
        </div>
      </div>
      <p>
      <div class="row">
        <div class="col-xs-1 col-xs-offset-2">
          <%= t.submit :submit, class:  "btn btn-sm btn-primary", id: "submitbtn" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
