<% provide(:title, "Edit user profile - " + current_user.name) %> 
<p>
<div class="row">
 	<div class="span10" id="backcolor">
		<div class="row">
			<div class="span6 offset3">
	 			<h4>Update your profile</h4>
				<%= simple_form_for current_user, html: { multipart: true, class: 'form-horizontal' } do |f| %>
					<%= render 'shared/error_messages', object: f.object %>
					<%= f.input :name %>
					<% if current_user.avatar_file_name.nil? %>
						<%= image_tag 'photo_not_available.png' %>
					<% else %>
						<%= image_tag current_user.avatar.url(:thumb) %>
						<!--%= gravatar_for @user %-->
					<% end %>
					<%= f.input	:avatar,	label: 	"Avatar Picture" %>
					<%= f.button :submit, 'Update Profile', class: "btn btn-medium btn-primary" %>
				<% end %>
			</div>
		</div>
		<div class="row">
			<div class="span8 offset2">
				<% if current_site? and (current_user.default_site != current_site.id.to_s) %>
					Currently viewing site <em><strong><%= current_site.sitename %></em></strong>. Click here to set as default site on login?<br/>
					<%= link_to "Default Site", site_user_path(current_site), class: "btn btn-medium btn-primary" %>
				<% end %>
			</div>
		</div>
	</div>
</div>