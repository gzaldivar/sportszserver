<% provide(:title, "Edit user profile - " + @user.name) %> 
<p>
<div class="row">
 	<div class="col-xs-11">
		<h4>Update User Profile</h4>
		<%= simple_form_for @user, :defaults => { :input_html => { :class => "form-control" } } do |f| %>
			<%= render 'shared/error_messages', object: f.object %>
			<div class="row">
				<div class="col-xs-2">
					<%= f.input :name %>
				</div>
				<p>
				<div class="col-xs-2 col-xs-offset-1">
					<% if @user.avatarthumburl.nil? %>
						<%= image_tag 'photo_not_available.png' %>
					<% else %>
						<%= image_tag @user.avatarthumburl %>
					<% end %>
					<p>
					<%= link_to "Delete Image", delete_avatar_user_path(@user), class: "btn btn-sm btn-danger" %>
				</div>
				<div class="col-xs-3 col-xs-offset-1">
					<h5><em>Login Email: <%= @user.email %></em></h5>
				</div>
			</div>
			<p>
			<h4>Athlete Alert Options:</h4>
			<div class="row">
				<div class="col-xs-2">
					<%= f.input :bio_alert, as: :boolean,  label: "Enable Bio Alerts" %>
				</div>
				<div class="col-xs-2 col-xs-offset-1">
					<%= f.input :blog_alert, as: :boolean, label: "Enable Blog Alerts" %>
				</div>
				<!--div class="col-xs-2 col-xs-offset-1">
					<%= f.input :stat_alert, as: :boolean, label: "Enable Stat Alerts" %>
				</div-->
			</div>
			<p>
		      <div id="loading">
		        <div id="loadingcontent">
		            <p id="loadingspinner">
		                Updating User...
		            </p>
		        </div>
		      </div>
		      <p>
			<div class="row">
				<div class="col-xs-2">
					<%= f.input :score_alert, as: :boolean, label: "Enable Scoring Alerts" %>
				</div>
				<div class="col-xs-2 col-xs-offset-1">
					<%= f.input :media_alert, as: :boolean, label: "Enable Photo and Video Alerts" %>
				</div>
			</div>
			<p>
			<div class="row">
				<% if isAdmin? and current_user != @user %>
					<div class="col-xs-2 ">
						<%= f.input :teamid, collection: @teams.collect{ |t| [t.team_name, t.id] }, label: "Manage Team", 
									input_html: {id: "select_team"}  %>
					</div>
					<div class="col-xs-2 col-xs-offset-1">
						<%= f.input :is_active, as: :boolean %>
					</div>
				<% end %>
			</div>
			<div class="row">
				<div class="col-xs-2 col-xs-offset-3">
					<%= f.button :submit, 'Update Profile', class: "btn btn-md btn-primary", id: "submitbtn" %>
				</div>
			</div>
		<% end %>
		<div class="row">
			<div class="col-xs-8 col-xs-offset-2">
				<% if current_site? and (@user.default_site != current_site.id.to_s) %>
					Currently viewing site <em><strong><%= current_site.sitename %></em></strong>. Click here to set as default site on login?<br/>
					<%= link_to "Default Site", sport_path(current_site), class: "btn btn-sm btn-primary" %>
				<% else %>
					Click here to go back to <em><strong><%= link_to current_site.sitename, sport_path(current_site) %></strong></em><br/>
				<% end %>
			</div>
		</div>
	</div>
</div>