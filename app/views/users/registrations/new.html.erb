<% provide(:title, "New User") %>
<p>
<% if !current_site? %>
  <div class="row">
    <div class="col-xs-12">
      <h3>Create Eazesport Administrator</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-3">
      <%= image_tag "fanapp/iPhoneEditGame.png", class: 'img-responsive' %>
    </div>
    <div class="col-xs-3 col-xs-offset-1">
      <%= image_tag "fanapp/iPhoneBasketballGameEdit.png", class: 'img-responsive' %>
    </div>
    <div class="col-xs-3 col-xs-offset-1">
      <%= image_tag "fanapp/iPhoneSoccerGameEdit.png", class: 'img-responsive' %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-11">
      <h5 class="text-info">We will send you an email to confirm your account. You can only activate your account by clicking on the link that is contained in the email.</h5>
    </div>
  </div>
<% else %>
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <h2><p class="text-info">Welcome to <%= current_site.sitename %></p></h2>
    </div>
  </div>
<% end %>
<p>
<div class="row">
  <div class="col-xs-4 col-xs-offset-3"> 
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), 
                :input_html => { :class => 'form-horizontal' } ) do |f| %>
        <%= devise_error_messages! %>
        <div class="form-group">
          <%= f.text_field :name, :autofocus => true, placeholder: 'Enter Username', class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.text_field :email, placeholder: 'Enter Email', class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.password_field :password, placeholder: 'Enter Password', class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.password_field :password_confirmation, placeholder: 'Password Confirmation', class: 'form-control' %>
        </div>
        <div class="form-group">
          <div class="col-lg-1 col-lg-offset-3">
            <%= f.submit :submit,  class: "btn btn-primary btn-md" %>
          </div>
        </div>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="col-xs-4 col-xs-offset-3">
    <%= render "devise/shared/links" %>
  </div>
</div>
<div class="row">
  <div class="col-xs-12">
    <h5 class="text-warning">REMEMBER: Look for an email to activate your account. You can only activate your account by clicking on the link that is contained in the email.</h5>
  </div>
</div>
 <div class="row">
    <div class="col-xs-12">
      <h5><em><class="text-warning">If you are trying to sign up for an existing Eazesportz site, select FIND above and sign in on that home page and you will be automatically regiestered for that site.</p></em></h5>
    </div>
  </div>
