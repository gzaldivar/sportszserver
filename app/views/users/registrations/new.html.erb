<% provide(:title, "New User") %>
<% if !current_site? %>
  <div class="row">
    <div class="span5">
      <h3>Create Eazesport Administrator</h3>
    </div>
    <div class="span4 offset1">
      <%= image_tag "FC_Live_Stats.png" %>
    </div>
  </div>
  <div class="row">
    <div class="span10">
      <h4><font color="blue">When you click submit below we will send you an email to email address you entered when you create your login. You can only activate your account by clicking on the link that is contained in the email.</font></h4>
    </div>
  </div>
<% end %>
<div class="row">
  <div class="span7" style="background-color:#ffffff;position:relative;top:0;left:100px;">
    <div class="row">
      <div class="span4 offset2">
 
        <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :name, required: true %>
            <%= f.input :email, :required => true, :autofocus => true %>
            <%= f.input :password, :required => true %>
            <%= f.input :password_confirmation, :required => true %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Sign up" %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
  <div class="row">
    <div class="span10">
      <h4><font color="blue">REMEMBER: Look for an email to activate your account. You can only activate your account by clicking on the link that is contained in the email.</font></h4>
    </div>
  </div>
