    <div class="span2 offset1">
  		<% if !@videoclip.teamid.nil? %>
        <h4>Remove team tag?<p-->
  			<!--%= @sport.teams.find(@videoclip.teamid).team_name %--><p>
        <!--%= link_to "Untag", untagteam_sport_videoclip_path(@sport, team: @videoclip.teamid, id:  @videoclip.id), class:	"btn btn-medium btn-warning",
            data: { confirm: "You sure? All players will also be untagged!" }  %-->
        <!--/h4>
  		<% end %>
    </div>
  </div-->
</div>
