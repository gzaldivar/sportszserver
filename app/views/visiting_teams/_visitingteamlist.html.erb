<h2>Visiting Teams</h2>

<table class="table table-striped table-bordered table-hover">
	<thead>
		<th>Team Name</th>
		<th>Mascot</th>

		<% if select == "Select Team" %>
			<th>Select</th>
		<% end %>

	</thead>
	<tbody>
		<% visiting_teams.each do |v| %>
			<tr>
				<td><%= link_to v.title, sport_visiting_team_path(@sport, v) %></td>
				<td><%= link_to v.mascot, sport_visiting_team_path(@sport, v) %></td>

				<% if select == "Select Team" %>
					<td><%= link_to "Select", visitingteamselected_sport_team_gameschedule_path(@sport, @team, @gameschedule, visiting_team_id: v.id),
							class: "btn btn-xs btn-primary" %></td>
				<% end %>
			</tr>
		<% end %>
	</tbody>
</table>
