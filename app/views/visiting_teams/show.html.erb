<% provide(:title, 'Visiting Team') %>
<p>
<div class="row">
	<div class="col-xs-6 col-xs-offset-2">
		<table class="table table-striped table-bordered table-hover">
			<thead>
				<th>Team Name</th>
				<th>Mascot</th>
				<th>Roster</th>
			</thead>
			<tbody>
				<td><%= @visiting_team.title %></td>
				<td><%= @visiting_team.mascot %></td>
				<td><%= link_to "Roster", sport_visiting_team_visitor_rosters_path(@sport, @visiting_team), class: "btn btn-xs btn-primary" %></td>
			</tbody>
		</table>
	</div>
</div>
<p>		
<% if user_signed_in? and isAdmin? %>
	<div class="row">
		<div class="col-xs-4 col-xs-offset-4">
		    <%= link_to "Edit", edit_sport_visiting_team_path(@sport, @visiting_team), class: "btn btn-sm btn-warning" %>
			<%= link_to "Delete", sport_visiting_team_path(@sport, @visiting_team),  method:	:delete,  class: "btn btn-sm btn-danger", 
		                data: { confirm: "You sure?" } if user_signed_in? %>
		</div>
	</div>
<% end %>
